page {
  background-color: #87ccca;
}
.shade {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: .6;
  z-index: 1;
  position: fixed;
  top: 0;
  left: 0;
}
.coupons {
  position: absolute;
  top: 25%;
  left: 15%;
  width: 70%;
  z-index: 2;
}
.img{
  width: 100%;
  display: block;
}

.bgImg {
  width: 100%;
  /* position: relative; */
}
.tjImg, .invite {
  width: 80%;
  position: absolute;
  margin-bottom: 100rpx;
  /* top: 65%; */
  left: 10%;
}
.img{
  width: 100%;
  display: block;
  margin-bottom: -2rpx;
}
.tjInfo, .inviteInfo {
  width: 100%;
  background-color: #fff;
  border-radius: 6rpx;
  text-align: center;
}
.inviteInfo {
  width: 90%;
  padding: 0 5%;
  padding-bottom: 5%;
  background:linear-gradient(rgba(255,255,255,1),rgba(255,255,255,0.4));
  /* background: -webkit-linear-gradient(180deg, #fff , #87ccca); Safari 5.1 - 6.0 */
  /* background: -o-linear-gradient(180deg, #fff, #87ccca); Opera 11.1 - 12.0 */
  /* background: -moz-linear-gradient(180deg, #fff, #87ccca); Firefox 3.6 - 15 */
  /* background: linear-gradient(180deg, #fff , #87ccca); 标准的语法 */
}
.shareBtn, .posterBtn, .havaBtn {
  width: 60%;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 32rpx;
  background-color: #000;
  border-radius: 37rpx;
  color: #3abbb6;
  margin: 8% 20% 5% 20%;
}
.posterBtn {
  color: #000;
  background-color: #fff;
  margin: 0% 20% 5% 20%;
}
.havaBtn {
  background-color: #626262;
}