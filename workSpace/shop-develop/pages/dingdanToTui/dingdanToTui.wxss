
page{ width:100%; height:auto; min-height: 100%;}

.wrap{ width:100%; height:auto;clear:both; overflow:hidden;}
.top{ width:100%; height:74rpx; background:#dadada; clear:both; overflow:hidden;font-size:24rpx;line-height:74rpx;
  font-weight:bold;}
.top_left{ float:left; padding-left:20rpx; color:#000;}

.content{
  position:relative;
  padding:20rpx;
  margin-bottom: 20rpx;
  width:100%;
  height:auto;
  clear:both;
  overflow:hidden;
  box-sizing:border-box;
}
.con_left{
  position: relative;
  float:left;
  width:160rpx;
  margin-right:10rpx;
}
.con_left .icon-check{
  position:absolute;
  top:50%;
  left:0;
  margin-top: -20rpx;
}
.con_left image{ display:block; width:100%; height:240rpx;}
.con_right{ float:left; width:510rpx;}
.con_right .title{font-size:26rpx;line-height:40rpx;color:#000;}
.con_right .con{font-size:26rpx;line-height: 40rpx;color:#a3a3a3;}
.con_right .con text{color:#000;}
.con_right .con.gift{
  color: red;
}
.c_number{ float:left; width:50%; height:52rpx; padding-top:22rpx; position:absolute; right:30rpx; top:40%;}
.c_add{ float:right; width:52rpx; height:52rpx; line-height:52rpx; text-align: center; border:2rpx solid #000;}
.c_num{ float:right; width:80rpx; height:52rpx; line-height:52rpx; text-align: center; border:2rpx solid #000; border-right:none;
  font-size:28rpx;}
.c_jian{ float:right; width:52rpx; height:52rpx; line-height:52rpx; text-align: center; border:2rpx solid #000; border-right:none;}


.queding{ width:100%; height:auto; clear:both; overflow:hidden; box-sizing:border-box; padding:0 20rpx;margin-top:40rpx;}
.btnTrue{ width:100%; height:auto; font-size:30rpx; line-height:80rpx; color:#fff; background:#000;text-align: center;}


.tanchu{ width:100%; height:100%; position:fixed; top:0; left:0;}
.opacity{ width:100%; height:100%; background:#000; opacity:0.6; position:absolute; left:0; top:0;}
.tanchuCon{ width:100%; height:auto; background:#fff; position:absolute; left:0; bottom:0; box-sizing:border-box; border-radius: 12rpx 12rpx 0 0; overflow: hidden;}
.tanchuCon .topView{
  width: 100%;
  height: 100rpx;
  background-color: #F1F2F3;
  display: flex;
  flex-direction: row;
}
.tanchuCon .topView .topView-leftTitle{
  margin-left: 20rpx;
  font-size: 28rpx;
  width: auto;
  display: flex;
  line-height: 100rpx;
}
.tanchuCon .topView .topView-rightImage{
  float: right;
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  transform: translateY(-50%);
}
.tanchuCon .input{
  width: 95%;
  height: 90rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #F1F2F3;
}
.tanchuCon .miaoshu{
  font-size: 22rpx;
  color: gray;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
}
.tanchuCon .confirm{
  background-color: black;
  font-size: 30rpx;
  color: white;
  margin: 0 20rpx 20rpx 20rpx;
  width: auto;
  line-height: 80rpx;
  text-align: center;
}
/* 弹框2级菜单 */
.tanchuCon .topView-two{
  width: 100%;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: center;
}
.tanchuCon .centerViews{
  display: flex;
  flex-direction: row;
  margin: 0 20rpx 25rpx 20rpx;
  width: auto;
  height: 50rpx;
}
.tanchuCon .centerViews .centerViews-title{
  font-size: 26rpx;
  width: 100%;
  line-height: 50rpx;
  flex: 1;
}
.tanchuCon .centerViews .centerViews-iconSelect{
  margin-top: 7.5rpx;
}
.tanchuCon .centerViews .centerViews-icon{
  margin-top: 7.5rpx;
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  background-color: white;
  border: 1rpx solid #E5E6E7;
}
.tanchuCon .upload .title{
  padding: 10rpx 20rpx;
  background: #DADADA;
}
.tanchuCon .upload .title .red-star{
  color: red;
}
.tanchuCon .upload .title .tip{
  font-size: 26rpx;
}
.upload-img .img-wrap{
  position: relative;
  height: 200rpx;
  overflow: hidden;
  border: solid 1rpx #ccc;
}
.upload-img .img-wrap icon{
  position: absolute;
  right:10rpx;
  top: 10rpx;
}
.upload-img image{
  margin-right: 20rpx;
  width: 150rpx;
  height: 300rpx;
}
.content.disable{
  background: #eee;
  border: #eee;
}
.reason{
  padding: 10rpx;
  font-size: 28rpx;
  max-height: 400rpx;
  overflow: scroll;
}
.reason .reason-item{
  padding: 8rpx;
}
.reason .reason-item .icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: solid 2rpx #ccc;
}