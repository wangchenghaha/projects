.wrap{ width:100%; height: auto; clear:both; overflow:hidden;}
.shoplist{margin-bottom: 100rpx;}
.promotion{
    margin: 10rpx auto;
    width: 700rpx;
    font-size: 24rpx;
    line-height: 30rpx;
}
.promotion .promotion-name{
   display: inline-block;
   margin-right: 15rpx;
   padding: 3rpx 5rpx;
   line-height: 35rpx;
   color: #fff;
   background-color: red; 
}
 .promotion .promotion-desc{
    flex:1;
}
.iPhoneXshoplist{margin-bottom: 168rpx;}
.shopItemContent{
    position: relative; 
    padding-bottom: 10rpx;
    margin-bottom: 20rpx;
    width: 100%;  
    border-bottom: solid 1rpx #ccc;
}
.checkIamge{
    width: 44rpx;
    height: 44rpx; 
    margin-left: 20rpx;
    box-sizing: border-box;
    border: solid 4rpx #ccc;}
.itemPic{width: 180rpx; height: 280rpx;  margin-left: 20rpx;}
.itemNoticePic{width: 100rpx; height: 100rpx; position: absolute; left: 60rpx; top: 20rpx;}
.itemDescription{width: 60%; height: auto; clear: both; overflow: hidden; margin-left: 20rpx;}
.itemText{font-size: 24rpx; margin-top: 10rpx;}
.itemEdit{width: 10%; height: auto; clear: both; overflow: hidden;}
.itemEdit image{width: 40rpx; height: 40rpx; margin-top: 30rpx;}
.footer{width: 100%; bottom: 0rpx; position: fixed;}
.settlementContent{width: 100%; height: 100rpx; display: flex; flex-direction: row;
    background: white; border-top: 1rpx solid gray;
    align-items: center;}
.settlementContent text{font-size: 24rpx;}
.totalPric{ display: flex; align-items: center; justify-content: flex-end; width: 58%; }
.settlement{width: 200rpx; height: 100rpx; display: flex; align-items: center;
     justify-content: center; background: black; color: white; font-size: 26rpx;
    position: fixed; right: 0rpx;}
.settlement .btn{
  background: #000;
  color: #fff;
  font-size: 28rpx;
}

.noGoods{display: flex; flex-direction: column; justify-content: center; align-items: center; margin-top: 300rpx;}
.list_null_btn{ width:50%; height:90rpx; font-size:34rpx; line-height:90rpx; background:#000;
    color:#fff; text-align:center; margin-top: 30rpx;}

/* 删除商品 - 弹出框 */
.tishi{ width:100%; height:100%; position:fixed; left:0; top:0; z-index:9999; }
.opacity{ width:100%; height:100%; position:absolute; left:0; top:0; background:#000; opacity:0.5;}
.tanchu{position: flex; width:572rpx; height:345rpx; position:absolute; left:0; top:0; right:0; bottom:0; margin:auto; background:#fff; border-radius: 10rpx;}
.closeIcon{position: absolute; right: 10rpx; top: 10rpx;}
.h2{width:100%; height:100rpx; font-size:38rpx;  font-weight: 600; line-height:125rpx; color:#000; text-align:center;}
.title text{ font-size:30rpx; width:100%; text-align:center; display:block; font-weight: 600; line-height:145rpx; color:#000;}
.bott{ width:100%; height:100rpx; clear:both; overflow:hidden;}
.bot{ float:left; width:50%; height:100rpx; border-top:1rpx solid gray;}
.true{ float:right; background:#000; color: #fff;  width:100%; height:100%;  font-size:30rpx; line-height:100rpx; text-align:center; border-radius: 5rpx;}
.false{ float:left; color: #000; width:100%; height:100%;  font-size:30rpx; line-height:100rpx; text-align:center;}

/* 选择尺码等 - 弹出框 */
.details_size{ width:100%; height:100%; position:fixed; left:0; top:0; z-index:8888;}
.details_opacity{ width:100%; height:100%; position:absolute; left:0; top:0; background:#000; opacity:0;}
.details_con{width:100%; height:auto; clear:both; position:absolute; left:0; bottom:-400px; 
background:#fff; padding-bottom:20rpx;}
.dd_con{ box-sizing:border-box; padding:0 20rpx;}
.details_sizeOne_A{width:100%; height:242rpx; clear:both; position:relative;border-bottom:2rpx solid #e8e8e8;}
.a_list{ float:left; height:162rpx;}
.a_left{ width:164rpx; height:262.3rpx; border:2rpx solid #e8e8e8; margin-top:-40rpx;}
.a_left image{ width:100%; height: 100%;}

.a_center{ width:430rpx; height: 162rpx; float:left; font-size:32rpx; line-height:38rpx; padding-left:20rpx;}
.a_center .money{ color:#ff580c; font-size:32rpx; padding-top:4rpx;}
.a_center .kucun,.a_center .chicun{ color:#000; font-size:26rpx;}
.a_center .kucun text{ font-size:32rpx;}

.a_right{ width:60rpx; height:60rpx; position:absolute; right:0; top:6rpx;}
.a_right image{ width:42rpx; margin:9rpx 0 0 9rpx;}

/* 颜色分类 */
.details_sizeOne_B{ width:100%; height: auto; clear: both; overflow: hidden; border-bottom:2rpx solid #e8e8e8;}
.b_title{ font-size:24rpx; line-height:60rpx; color:#000;}
.b_ul{ width:100%; height:auto; clear:both; overflow:hidden;}
.b_li{ float:left; border-radius:10rpx; font-size:24rpx; line-height:60rpx; background:none; margin-bottom:20rpx;
 color:#000; padding:0 12rpx; margin-right:15rpx;}
.b_list{ background:#ff5000; color:#fff; }
.details_sizeOne_B .chima_list{ background:#f5f5f5; color:rgb(204, 204, 204);}


/* 购买数量 */
