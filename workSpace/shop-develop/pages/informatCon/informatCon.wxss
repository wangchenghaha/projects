

.wrap{ width:100%; height:auto; min-height:100%; clear:both; overflow:hidden;}

.video_wrapper{ width:100%;height:100%; position:absolute; top:0;left:0;}

.head{ width:100%; height:auto; clear:both; overflow:hidden; }
.head .title{ width:100%; height:auto; font-size:36rpx; line-height:36rpx; padding:15rpx 0 25rpx 0; font-weight:bold; box-sizing:border-box;padding-left:35rpx;}
.head .description{ width:100%; height:auto; font-size:24rpx; line-height:28rpx; box-sizing:border-box; padding-left:35rpx; padding-bottom:20rpx;}

.content{ width:100%; height:auto; clear:both; overflow:hidden; padding-bottom:10rpx;}
.content .li{ width:100%; height:auto; clear:both; overflow:hidden; }
.content .firstLi{ border-top:none;}
.content image{display:block; width:100%; height:auto;}
.content .firstLi image{ display:block; width:100%; /*height:464rpx;*/}
.content .img{ display:block; width:100%; /*height:462rpx;*/ margin:0 auto;}
.content .text{ width:100%; height:auto; font-size:26rpx; line-height:40rpx; color:#5c5c5c; box-sizing:border-box; padding:30rpx;}
.conVideo{ width:100%; height:auto;}
.conVideo video{ width:100%;}

/* 相关专辑 */
.foot{ width:100%; height:auto; clear:both; overflow:hidden; border-top:24rpx solid #dcdcdc; padding-top:30rpx;}
.foot_title{ width:100%; height:auto; clear:both; overflow:hidden; font-size:32rpx; line-height:50rpx; color:#000;
text-align:center; font-weight:bold; padding-bottom:20rpx;}
.foot scroll-view{ display:block; width:100%; height:166rpx;}
.scroll_wrapper{ width:100%; height:auto; clear:both; overflow:hidden; box-sizing:border-box; padding:0 30rpx;}
.scrollList{ width:100%; border-top:1px solid #ececec; padding:30rpx 0; height:auto; position:relative; clear:both; overflow:hidden;}

.foot_left{ float:left; width:474rpx; height:auto;}
.foot_left .title{ font-size:28rpx; line-height:40rpx; color:#262626; font-weight:bold;}
.foot_left .createTime{ color:#8d8d8d; font-size:24rpx; line-height:30rpx; position:absolute; left:0; bottom:30rpx;}
.foot_right{ float:right; width:214rpx; height:auto;}
.foot_right image{ display:block; width:200rpx;}
