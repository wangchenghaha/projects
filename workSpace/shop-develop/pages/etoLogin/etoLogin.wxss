/* components/authorize/authorize.wxss */
.authorize-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
}
.authorize-wrapper .container{
  /*margin:0 auto;*/
  width: 100%;
}
.authorize-wrapper .authorize-main{
  padding-bottom: 20rpx;
  background: #fff;
}
.authorize-wrapper .authorize-main .banner{
  position: relative;
}
.authorize-wrapper .authorize-main .banner .logo{
  position: absolute;
  left: 50%;
  bottom: 50rpx;
  margin-left: -75rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.authorize-wrapper .authorize-main .banner image{
  width: 100%;
}
.authorize-wrapper .authorize-main text{
  display: block;
}
.authorize-main .sub-title{
  margin: 20rpx auto;
  padding-bottom: 15rpx;
  width: 90%;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
  border-bottom: solid 1rpx #8a8a8a;
}
.authorize-main .desc{
  padding-top: 25rpx;
  position: relative;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #8a8a8a;
}
.authorize-main .desc text{
  display: inline-block;
  margin-right: 15rpx;
  width: 10rpx;
  height: 10rpx;
  background: #8a8a8a;
  border-radius: 50%;
  vertical-align: middle;
}
.authorize-wrapper .title{
  display: block;
  padding: 30rpx 0;
  font-size: 36rpx;
  text-align: center;
  color: #fff;
}
.authorize-wrapper .server-list image{
  display: block;
  width: 75rpx;
  height: 75rpx;
  margin-right: 25rpx;
}
.server-list{
  margin: 0 auto;
  padding-top: 30rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
}
.server-list .list-row{
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.server-list .list-item{
  display: flex;
  flex: 1;
  justify-content: flex-start;
}
.server-list .list-item .text1{
  font-size: 36rpx;
  font-weight: bold;
}
.server-list .list-item .text2{
  font-size: 30rpx;
  color: #8a8a8a;
}
.authorize-btn{
  margin-top:20rpx;
  background: #fff;
  color: #22b415;
}
.btn-active{
  animation: click 0.5s;
  transform-origin: center;
}
@keyframes click {
  0%{
    transform: scale(1);
  }
  100%{
    transform: scale(0.8);
  }
}
.back{
  position: fixed;
  left: 0;
  top: 40rpx;
  padding: 5rpx 30rpx 5rpx 20rpx;
  font-size: 30rpx;
  background: rgba(255,255,255,0.8);
  color: #000;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}