

.wrap{ width:100%; height:auto; clear:both; overflow:hidden;}
.header{ width:100%; height:87rpx; font-size:32rpx; line-height:87rpx; color:#000;text-align: center;padding-bottom:50rpx;}

.content{ box-sizing:border-box; padding:0 20rpx;}
.content,.li{ width:100%; height:auto; clear:both; overflow:hidden;}
.li_left,.li_right{ float:left; height:auto;}
.li{position:relative; margin-bottom:30rpx;}
.li_left{ width:180rpx; height:180rpx; background:#000;}
.money{ font-size:26rpx; line-height:90rpx; overflow:hidden; color:#fff; text-align:center; position:relative;top:30rpx;padding-bottom:8rpx;}
.jine{ font-size:52rpx; line-height:40rpx; color:#fff; display:inline-block;}
.p{ width:100%; height:auto; position:relative; text-align: center;}
.pCenter{ display:inline-block; font-size:26rpx; line-height:36rpx; border:1px solid #fff; padding:0 25rpx;border-radius:3px; color:#fff;margin:0 auto;}

.li_right{ width:530rpx; padding-left:20rpx; box-sizing:border-box;}
.title{ font-size:36rpx; color:#000; padding-bottom:45rpx;}
.descption{ font-size:24rpx; line-height:38rpx; color:#9a9a9a;}
.true_time{ font-size:24rpx; line-height:38rpx; color:#9a9a9a;}
.btn{ padding:0 15rpx 0 20rpx; height:54rpx; background:#000; border-radius:30rpx; text-align: center; font-size:24rpx; line-height:54rpx; color:#fff; position:absolute; right:20rpx; top:0; bottom:0; margin:auto 0;}