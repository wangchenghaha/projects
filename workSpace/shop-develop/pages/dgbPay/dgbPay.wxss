

.wrap{ width:100%; height:auto; clear:both; overflow:hidden; padding-bottom:134rpx;}
.header{ width:100%; height:126rpx; background:#eeeeee; border-top:2rpx solid #b8b8b8; padding-left:96rpx; box-sizing:border-box; position:relative; border-bottom:1rpx solid #e9e9e9;}
.header .title{ font-size:30rpx; font-weight:bold; line-height:45rpx;color:#000; padding-top:20rpx;}
.header .description{ font-size:24rpx; line-height:40rpx; color:#888888;}
.header .image{ display:block; width:50rpx; height:50rpx; position:absolute; left:20rpx; top:0;bottom:0;margin:auto 0;}

.content{ width:100%;height:auto; clear:both; overflow:hidden; box-sizing:border-box; padding:0 20rpx;}
.content .li{ width:100%; height:auto; clear:both; overflow:hidden; padding:20rpx 0; font-size:36rpx;  line-height:40rpx; color:#666; border-bottom:1rpx solid #eeeeee;}
.content .li_left{ width:20%; height:auto; color:#000; padding-left: 80rpx; font-size: 32rpx; }
.content .flex{display: flex; padding-top: 15rpx;}
.content image{width: 35rpx; height: 43rpx; padding-left: 30rpx;}
.content .li_right{ width:90%; height:auto;  font-size: 32rpx;}

.brBg{ width:100%; height:15rpx; background:#eeeeee;}

.list{ width:100%; height:auto; clear:both; overflow: hidden; box-sizing:border-box;}
.list_top{ width:100%; height:80rpx; clear:both; overflow:hidden; font-size:30rpx; line-height:80rpx; color:#666; box-sizing:border-box; padding:0 20rpx; border-bottom:1rpx solid #eeeeee;}
.list_tl{ float:left; width:50%; color:#000; text-align:left;}
.list_tr{ float:right; width:50%; text-align:right;}
.dl,.dd{ width:100%; height:auto; clear:both; overflow:hidden;}
.dl{ box-sizing:border-box; padding:0 20rpx;}
.dd{ border-bottom:1rpx solid #eeeeee; padding:20rpx 0;}
.dd_left{ float:left; width:17%; height:auto; margin-right:3%; min-height:192rpx;}
.dd_left image{ display:block; width:100%;height:auto;}
.dd_center{ width:56%; height:auto; float:left; }
.dd_center .title{ font-size:30rpx; line-height:40rpx; color:#000; padding:10rpx 0 8rpx;  overflow:hidden; text-overflow:ellipsis; white-space:nowrap;  }
.dd_center .goodsColor{ font-size:28rpx; line-height:40rpx; color:#999999;}
.dd_center .goodsSize{  font-size:28rpx; color:#999999; padding-top: 60rpx;}
.dd_right{ float:left; width:24%; text-align:right; font-size:28rpx; line-height:48rpx; padding-top:10rpx;}
.dd_right .originalPrice{ font-size:28rpx; color:#999999; text-decoration:line-through;}
.dd_right .tNum{ font-size:28rpx; color:#999999; padding-top: 60rpx;}

.additional {padding: 0 20rpx; margin-top: 15rpx; background-color: #fff;overflow: hidden;font-size: 30rpx; height: 60rpx; line-height: 60rpx; border-bottom: 1px solid #999999; }
.fl { float: left;}
.fr { float: right;}

.footer{ width:100%; height:100rpx; position:fixed; bottom:0; left:0; background:#eeeeee; }
.footer .foot_total{width: 70%; height: 100rpx; float: left; text-align: center; box-sizing:border-box; line-height:100rpx; }
.foot_total .totalCount{font-size: 36rpx; float: left; padding-left: 100rpx;  }
.foot_total .price{font-size: 36rpx; float: left; color: #d90715;}
.foot_li{ width:30%; height:100rpx; float:right; box-sizing:border-box;  font-size:30rpx; line-height:100rpx; text-align:center; }
.foot_right .btn{ background:red; border:2rpx solid red; color:#fff;  }