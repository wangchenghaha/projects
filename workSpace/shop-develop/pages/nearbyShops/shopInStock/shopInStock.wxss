@import "../tmpl/shopsPreviewItem2/shopsPreviewItem2";
@import "../tmpl/popGoodsStockDetail/popGoodsStockDetail";
.frame{width: 100%;height: auto;display: flex;flex-direction: column; clear:both; overflow:hidden;}
/* .frame{width: 100%;height: 100%;display: flex;flex-direction: column;} */
.layout_product{display: flex;flex-direction: row; width: 100%; padding: 7rpx 7rpx 0 7rpx;min-height: 250rpx;height: 250rpx;}
.img{width: 150rpx;height: 240rpx; margin-right: 7rpx;}
.layout_product_right{width: 100%;display:flex;flex-direction:column;height: 240rpx;}
.title{line-height: 65rpx;font-size: 30rpx;color: #333;}
.bar_1,.bar_2{height: 60rpx; line-height: 60rpx;display: flex;flex-direction: row;width: 100%;}
.key,.value{font-size: 26rpx;width: 100%;}
.key{width: 80rpx;color: #666;}
.value{color: black;}
.value,.price_value_now,.price_value_origin{padding-left: 17rpx;font-size: 26rpx;}
.price_value_now{color: peru;}
.price_value_origin{color: #666;text-decoration: line-through;}

.bar_inner1,.bar_inner2,.bar_inner3{text-align: center;display: flex;flex-direction: row;font-size: 26rpx;}
.bar_inner1{width: 70%;}
.bar_inner2{width: 100%;padding-left: 40rpx;}
.bar_inner3{width: 100%;padding-left: 57rpx;}
.picker_wrap {width: 100%;height: 60rpx; line-height: 60rpx;position: relative;}

.layout_picker {padding: 7rpx;}
.picker_wrap_pca { float:left; width:25.5%; height:60rpx; position:relative; margin-right:2%;line-height: 60rpx;}
.picker {width: 80%;height: 60rpx;box-sizing: border-box;text-align: center;}
.picker .picker_content,.picker_con_cs {font-size: 26rpx;line-height: 60rpx;color: #4998ea;padding-left: 7rpx;}
.picker_con_cs_default{color: #BBB;}
.picker_con_cs{color: black;}
.arrow {width:60rpx; height:60rpx; position:absolute; right:0;top:0; z-index:9;}
.arrow image { display:block; height:30rpx;width:20rpx;margin:24rpx;}

.bar_3{line-height: 50rpx;height: 50rpx;display: flex;flex-direction: row;margin-top: 7rpx;}
.img_warning{width: 50rpx; height: 50rpx;position: relative;top: 50%;transform: translateY(-50%);}
.img_point{width: 35rpx;height: 35rpx;position: relative;top: 50%;transform: translateY(-50%);}
.bar_3 text{position: relative;top: 50%;transform: translateY(-50%);font-size: 22rpx;color:#666;padding-left: 7rpx;padding-right: 17rpx;}

.map{width: 100%;height: 500rpx;padding-bottom: 7rpx;}

.search {float: right;width: 16%;font-size: 26rpx;background: black;color: white;text-align: center;
    line-height: 57rpx;border-radius: 10rpx;font-weight: bold;}

.layout_tip_0{ margin-top: 7rpx;height: 60rpx;padding: 7rpx 17rpx 0rpx 17rpx;line-height: 60rpx;display: flex;flex-direction: row;justify-content: flex-start;}
.tip_0{position: relative;top: 50%;transform: translateY(-50%);font-size: 28rpx;color: black;font-weight: bold;}
.tip_1{font-size: 24rpx;padding-left: 7rpx;}
.layout_list{height: 100%;padding-left: 17rpx;padding-right: 17rpx;} 
