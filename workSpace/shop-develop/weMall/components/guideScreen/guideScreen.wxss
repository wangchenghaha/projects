.position {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 9999;
  transition: 0.3s;
  opacity: 0;
  transform: translateX(120%);
}
.position.true {
  transition: 0.3s;
  opacity: 1;
  transform: translateX(0);
}
.position .screen {
  position: relative;
  float: right;
  padding: 40rpx 20rpx;
  width: 480rpx;
  height: 100%;
  box-sizing: border-box;
  background: #fff;
}
.position .screen .title {
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #333;
}
.position .screen-list {
  padding: 20rpx 0;
  border-bottom: solid 2rpx #ccc;
}
.position .screen-list .text {
  position: relative;
  display: inherit;
  font-size: 26rpx;
  color: #666;
}
.position .screen-list .text:after {
  content: "";
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 15rpx;
  height: 15rpx;
  border-top: solid 2rpx #666;
  border-right: solid 2rpx #666;
  transform: rotate(135deg) translateY(50%);
}
.position .screen-list .time {
  margin: 20rpx 0;
}
.position .screen-list .time-item {
  padding: 5rpx 25rpx;
  color: #999;
  font-size: 26rpx;
  background: #efefef;
  border-radius: 30rpx;
}
.position .screen-list .time-item.true {
  color: #257bfb;
  background: #cce0fe;
}
.position .screen-list .date .picker {
  width: 200rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 26rpx;
  color: #999;
  box-sizing: border-box;
  border: solid 1rpx #999;
}
.position .screen .wrap {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  font-size: 30rpx;
  border-top: solid 1rpx #999;
  border-bottom: solid 1rpx #999;
}
.position .screen .wrap .btn {
  height: 100rpx;
  line-height: 100rpx;
}
.position .screen .wrap .btn-reset {
  flex: 0 1 38%;
  background: #fff;
}
.position .screen .wrap .btn-confirm {
  flex: 0 1 62%;
  background: #257bfb;
}

