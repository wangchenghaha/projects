.wrap{
  width: 100%;
}
.card-row{
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.card-wrapper{
  margin-left: 2.5%;
  width: 95%;
  flex-wrap: wrap;
}
.card-item{
  margin-bottom: 20rpx;
  flex: 0 1 49%;
}
.card-item image{
  display: block;
  width: 100%;
}
image{
  display: block;
  width: 100%;
}
.back{
  position: fixed;
  left: 0;
  top: 40rpx;
  padding: 5rpx 30rpx 5rpx 20rpx;
  font-size: 30rpx;
  background: rgba(255,255,255,0.8);
  color: #000;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.btn-wrapper{
  position: fixed;
  bottom: 0;
  right: 30rpx;
  width: 280rpx;
}
.btn-wrapper .btn-item{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 50rpx;
  background: #0da8c9;
}
.btn-wrapper .btn-item image{
  width: 30rpx;
  height: 30rpx;
}
.btn-wrapper .btn-item text{
  font-size: 30rpx;
  color: #fff;
  margin-left: 20rpx;
}
.logout{
  width: 100%;
  background: #000;
}
.margin-bottom{
  margin-bottom: 80rpx;
}
.tip{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 99;
}
.tip .close{
  display: block;
  position: absolute;
  right: 50rpx;
  top: 50rpx;
  content: '';
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  z-index: 99999;
}
.tip image{
  transform: translateY(-120rpx);
}
.popup{
  position: fixed;
  top: 0;
  left: 0;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  transition: all 0.3s;
  transform: translateY(-100%);
  overflow: hidden;
  z-index: 99;
}
.popup.show{
  transform: translateY(0);
}
.popup .container{
  position: relative;
  width: 530rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.popup .container .btn{
  position: absolute;
  left: 50%;
  bottom: 430rpx;
  margin-left: -250rpx;
  width: 500rpx;
  height: 600rpx;
}
.popup .checkbox{
  margin-top: 20rpx;
  color: #fff;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}
.popup .close{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.popup .close text{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -15rpx;
  width: 30rpx;
  height: 2rpx;
  background: #fff;
  transform-origin: center;
}
.popup .close text:nth-child(1){
  transform: rotate(45deg);
}
.popup .close text:nth-child(2){
  transform: rotate(-45deg);
}
