.wrap{ 
    display: flex;
    width:100%; 
    height:100%; 
    clear:both; 
    overflow:hidden;
    justify-content: center;
}

.card {
    width: 90%;
    height: 70%;
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 2px 4px 4px 2px #cccccc;
    position: relative;
    margin-top: 20%; 
    display: flex;
    flex-direction: column;
    align-items: center;
}

.headImage{
    width: 120rpx;
    height: 120rpx;
    box-shadow: 2px 4px 4px 2px #cccccc;
    position: absolute;
    border-radius: 50%;
    margin-top: -60rpx; 
}

.content{
    width: 80%;
    position: absolute;
    margin-top: 100rpx; 
}

.content .content_info{
    float: left;
    
}

.content image{
    float: right;
    width: 100rpx;
    height: 100rpx;
    box-shadow: 2px 4px 4px 2px #cccccc;
}

.qrImage{
    width: 500rpx;
    height: 500rpx;
    position: absolute;
    margin-top: 350rpx; 
}