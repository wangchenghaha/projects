.wrap{ 
    width:100%; 
    height: 100%;
    clear:both; 
    overflow:hidden;
}

.customerInfo{
    width: 94%;
    display: flex;
    margin-top: 20rpx;
    margin-left: 3%;
}

.customerInfo .baseInfo{
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.customerInfo .baseInfo .text{
    font-size: 28rpx;
    color: #000;
}
.customerInfo .showInfo{
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.customerInfo .showInfo .customerIcon{
    width: 108rpx;
    height: 108rpx;
    border-radius: 50%;
}

.customerInfo .showInfo .customerNick{
    font-size: 28rpx;
    color: #000;
    font-weight: 500;
}

.orderDetail{
    width: 94%;
    margin-top: 20rpx;
    margin-left: 3%;
}

.orderDetail .text{
    font-size: 28rpx;
    color: #000;
}