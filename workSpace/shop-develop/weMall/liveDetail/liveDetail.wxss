
.canvas{
  position: fixed;
  left: 750rpx;
  top: 0;
  transform: scale(0) translate(-100%);
  z-index: -1;
  opacity: 0;
}
.main image{
  display: block;
  padding-bottom: 200rpx;
  width: 100%;
}
.share-tip{
  position: fixed;
  left: 0;
  top: 0;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  z-index: 9999;
}
.share-tip .share-content{
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 20rpx;
  width: 640rpx;
  height: 400rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.popup{
  position: fixed;
  left: 0;
  top: 0;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  z-index: 9999;
}
.popup .wrap{
  margin-bottom: 20rpx;
  padding: 43rpx 30rpx;
  width: 644rpx;
  min-height: 400rpx;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;

}
.popup .wrap text{
  font-size: 34rpx;
  line-height: 35rpx;
}
.popup .wrap .copy-btn{
  margin: 30rpx auto 0;
  width: 574rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #fff;
  border-radius: 10rpx;
  background: #5b9bd5
}