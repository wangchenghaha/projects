.detail-wrapper {
  background: #f0f0f0;
  padding-bottom: 200rpx;
}
.detail-wrapper image {
  display: block;
  width: 100%;
}
.detail-wrapper .guide-id {
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #ccc;
  border-top: dashed 1rpx #ccc;
}
.detail-wrapper .share-tip {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9999;
  flex-direction: column;
}
.detail-wrapper .share-tip .wrap {
  flex-direction: column;
  width: 600rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
}
.detail-wrapper .share-tip .wrap .skill {
  padding: 20rpx 0;
}
.detail-wrapper .share-tip .wrap .share-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #a6a6a6;
  color: #fff;
}
.detail-wrapper .share-tip .close {
  margin-top: 20rpx;
}
.detail-wrapper .success-tip {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  flex-direction: column;
}
.detail-wrapper .success-tip .wrap {
  margin: 0 auto 20rpx;
  width: 600rpx;
  padding: 40rpx 60rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.detail-wrapper .success-tip .wrap .title {
  font-size: 36rpx;
}
.detail-wrapper .success-tip .wrap .sub-title {
  font-size: 24rpx;
}
.detail-wrapper .success-tip .wrap .skill .line {
  flex: 1;
  width: 100%;
  height: 2rpx;
  background: #000;
}
.detail-wrapper .success-tip .wrap .swiper {
  height: 580rpx;
}
.detail-wrapper .success-tip .wrap .learn {
  font-size: 26rpx;
}

