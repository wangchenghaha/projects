@import "../mycss.wxss";
.layout_father {display: flex;flex-direction: column;align-items: center;padding: 17rpx;clear:both;overflow: hidden;}
.title {font-size: 26rpx;line-height: 30rpx;text-align: left;padding-left: 20rpx;}
.self_delivery {width: 100%;height: auto;clear: both;overflow: hidden;padding: 20rpx 0;}
.self_delivery .city {float: left;width: 25.5%;height: 60rpx;position: relative;margin-right: 3%;}
.self_delivery .search {float: right;width: 14%;font-size: 26rpx;background: #000;color: #fff;text-align: center;line-height: 60rpx;border-radius: 10rpx;}
.picker {width: 100%;height: 60rpx;box-sizing: border-box;border: 2rpx solid #bababa;}
.picker .picker1 {font-size: 26rpx;line-height: 60rpx;color: #666;padding-left: 20rpx;}
.close {width: 60rpx;height: 60rpx;position: absolute;right: 0;top: 0;z-index: 9;}
.close image {display: block;width: 30rpx;height: 30rpx;margin: 19rpx;}
