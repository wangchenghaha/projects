@import "../mycss.wxss";
@import "../components/steps/index";
@import "../tmpl/checkableOrderItem/checkableOrderItem";

.layout_father{ width:100%; height:100%; clear:both; overflow:hidden;display: flex;flex-direction: column;}

.scroll_view {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 1000rpx;
    padding-bottom: 380rpx;
}

.text_title_left {
    float: left;
    padding-left: 20rpx;
    color: #000;
}


.stepper_style {
    width: 60rpx;
    height: 20rpx;
}

.reason_title {
    padding-left: 17rpx;
    font-size: 26rpx;
    padding-bottom: 17rpx;
    font-weight: bold;
    margin:0;
}

.reason_layout {
    padding-left: 17rpx;
    padding-right: 17rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.reason_0, .reason_1{display: flex;align-items: center;padding: 7rpx 12rpx 7rpx 12rpx;font-size: 26rpx;}

.reason_0 {
    background: white;
    color: black;
    border: 1px solid black;
}

.reason_1 {
    background: #019FE8;
    color: white;
    border: 1px solid #019FE8;
}

.reason_cus{padding: 3rpx 12rpx 3rpx 12rpx;font-size: 26rpx;
    border: 1px solid #EBEBEB;
}

.reason_input{color: #BEBEBE;}

.tip {
    padding-left: 17rpx;
    padding-right: 17rpx;
    margin: 7rpx 0 7rpx 0;
    color:#BEBEBE;
    font-size:22rpx;
}

.commit {
    width: 100%;
    background: #000;
    color: #fff;
    font-size: 32rpx;
    line-height: 70rpx;
    text-align: center;
}

.layout_multi{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: auto;
    clear: both;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
}

.layout_exchange_reason {
    padding: 17rpx 0 17rpx 0;
    width: 100%;
    height: auto;
    clear: both;
    overflow: hidden;
    border-top: 2rpx solid #EBEBEB;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

