.topicRecording {
  float: left;
  width: 40%;
  height: 100%;
  position: relative;
}


.progress_box {
  width: 130rpx;
  height: 130rpx;
  margin-left: -65rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
