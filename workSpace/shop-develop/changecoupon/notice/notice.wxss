.pages {
    position: relative;
    width: 100%;
    height: 100%;
    line-height: 1;
    box-sizing: border-box;
}
.bg {
    position: relative;
    width: 100%;
    height: 100%;
}
.bgimg {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-47%);
    z-index: 10;
    width: 750rpx;
    height: 1634rpx;
}
.coupon-wrapper {
    position: relative;
    padding-top: 95rpx;
    margin: 0 auto;
    width: 712rpx;
    height: 428rpx;
    text-align: center;
    box-sizing: border-box;
}
.couponbg {
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 712rpx;
    height: 428rpx;
}
.couponbg .coupon-bg {
    width: 712rpx;
    height: 428rpx;
}

.brand {
    width: 234rpx;
    height: 20rpx;
}
.coupontip {
    margin-top: 65rpx;
    font-size: 32rpx;
    color: #fff;
}
.coupontip.couponnum {
    font-size: 50rpx;
    color: #fff;
}
.pages .getbtn {
    margin: 0 auto;
    margin-top: 90rpx;
    width: 415rpx;
    height: 95rpx;
    background: #000;
    border-radius: 40rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 95rpx;
}