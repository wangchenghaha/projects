.rule-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 100;
}

.rule-box {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 680rpx;
  height: 1000rpx;
  background: #fff;
  border-radius: 20rpx;
}

.rule-title {
  padding: 55rpx 0;
  font-size: 40rpx;
  color: #000;
  text-align: center;
  font-weight: bold;
}

.ruel-cont {
  position: relative;
  flex: 1;
}

.scroll-box {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding: 0 30rpx 40rpx 30rpx;
  z-index: 20;
  box-sizing: border-box;
}

.closerule {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
  z-index: 20;
}

.rule-text {
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #000;
  line-height: 38rpx;
  text-align: justify;
}