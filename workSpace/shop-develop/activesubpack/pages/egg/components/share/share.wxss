/* activesubpack/pages/egg/components/share/share.wxss */
.share-container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.share-container .shade-wrapper{
  position: absolute;
  background: rgba(0, 0, 0, .6);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.share-container .content-wrapper{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.content-wrapper .image-box image{
  width: 626rpx;
}

.content-wrapper .btns-box{
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-item{
  margin: 0 25rpx;
  position: relative;
}
.btn-item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn-item image{
  width: 230rpx;
}