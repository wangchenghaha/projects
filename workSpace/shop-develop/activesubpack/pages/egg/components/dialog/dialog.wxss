/* activesubpack/pages/egg/dialog/dialog.wxss */
.dialog-container{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.dialog-shade-wrapper{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, .6);
}
.dialog-main-wrapper{
    position: absolute;
    width: 100%;
    top: 50%;
    left: 0;
    text-align: center;
    transform: translateY(-50%);
}
.dialog-image-area{
    width: 626rpx;
    /* height: 526rpx; */
    display: block;
    margin: 0 auto;
}
.dialog-close-area{
    width: 50rpx;
    height: 50rpx;
    margin-top: 30rpx;
}
.win-btn-area{
    width: 210rpx;
    height: 95rpx;
    margin: 0 auto;
    position: relative;
}
.win-btn-area image{
    width: 210rpx;
    height: 95rpx;
}
.win-btn-area .send-coupon{
    position: absolute;
    width: 210rpx;
    height: 95rpx;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0);
}
.share-btns{
    display: flex;
    justify-content: center;
}
.share-btns .share-item{
    position: relative;
    margin: 0 20rpx;
}
.share-item button{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.share-btns .share-item image{
    width: 230rpx;
}
.dialog-win-box{
    width: 626rpx;
    /* height: 747rpx; */
    display: block;
    margin: 0 auto;
    text-align: center;
}