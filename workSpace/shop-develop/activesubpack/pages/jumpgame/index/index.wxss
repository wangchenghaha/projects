page {
    width: 100%;
}

.page-contaniner {
    position: relative;
    width: 100%;
}

.button-hover {
    background: transparent;
}

.bg-wrap {
    width: 100%;
    height: 100%;
}

.bg-wrap .bg-img {
    width: 750rpx;
}

.btn {
    position: absolute;
    z-index: 20;
}

.signbtn {
    position: absolute;
    z-index: 10;
}

button {
    /* opacity: 0; */
    padding: 0;
    margin: 0;
    line-height: normal;
    box-shadow: none;
    background: transparent;
    border: none;
}

button::after {
    display: none;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 9999;
    opacity: 0;
    background: transparent;
}
.animat {
    animation:mymove 0.8s infinite;
    animation-direction:alternate;/*轮流反向播放动画。*/
    animation-timing-function: ease-in-out; /*动画的速度曲线*/
}
@keyframes mymove
{
    0%{
        transform: scale(1); 
    }
    25%{
        transform: scale(1.1);
    }
    50%{
        transform: scale(1.2);
    }
    75%{
        transform: scale(1.1);
    }
    100%{
        transform: scale(1);
    }
}