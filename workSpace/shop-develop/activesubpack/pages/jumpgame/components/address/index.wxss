.share-btn {
    position: absolute;
    bottom: -49rpx;
    left: 50%;
    width: 359rpx;
    height: 98rpx;
    z-index: 10;
    padding: 0;
    margin: 0;
    margin-left: -179rpx;
    line-height: normal;
    box-shadow: none;
    background: transparent;
    border: none;
}

.share-btn::after {
    display: none;
}

.address-btn {
    width: 359rpx;
    height: 98rpx;
}

.close-btn {
    position: absolute;
    bottom: -125rpx;
    left: 50%;
    margin-left: -25rpx;
    width: 50rpx;
    height: 50rpx;
    z-index: 10;
}

.button-hover {
    background: transparent;
}