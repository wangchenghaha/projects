} */

.form-input {
    width: 330rpx;
    height: 50rpx;
    border: 1px solid #97daeb;
    border-radius: 40rpx;
    text-align: left;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    line-height: 50rpx;
}

.form-tip {
    margin-top: 45rpx;
    font-size: 24rpx;
    color: #999;
    text-align: left;
    padding: 0 45rpx;
    box-sizing: border-box;
    line-height: 40rpx;
}

.form-tip-color {
    color: #f99aba;
}

.form-textarea {
    width: 330rpx;
    height: 130rpx;
    border: 1px solid #97daeb;
    border-radius: 15rpx;
    text-align: left;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
}

.region-input {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}


