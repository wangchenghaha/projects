.address-contaniner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    background: rgba(0, 0, 0, 0.7);
}

.address-wrap {
    width: 653rpx;
    height: 1041rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -326.5rpx;
    margin-top: -540rpx;
    z-index: 200;
}

.address-bg {
    width: 100%;
    height: 100%;
}

.address-content {
    width: 530rpx;
    height: 750rpx;
    position: absolute;
    top: 295rpx;
    background: transparent;
    left: 60rpx;
    z-index: 20;
    font-size: 30rpx;
    color: #666;
    font-weight: bold;
    line-height: 1;
    box-sizing: border-box;
    text-align: center;
}

.form-item {
    margin: 20rpx auto;
    display: flex;
    align-items: center;
    justify-content: center;
}

.form-item .form-label {
    margin-right: 20rpx;
    width: 90rpx;
    color: #666;
    display: flex;
    justify-content: space-between;
}


