.wrapper {
    position: relative;
    height: 100%;
  }
  .wrapper .header {
    font-size: 0;
    position: relative;
  }
  .wrapper .header .logo_text {
    position: absolute;
    top: 86rpx;
    left: 46rpx;
    font-size: 38rpx;
    line-height: 1.4;
    text-align: center;
  }
  .wrapper .header .images_header {
    width: 750rpx;
    height: 380rpx;
  }
  .wrapper .content-middle {
    position: absolute;
    bottom: 0;
    right: 0;
    top: 500rpx;
    left: 0;
    width: 100%;
    background: #ffffff;
    /* border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx; */
    padding: 32rpx;
    box-sizing: border-box;
  }

  .edit_wrapper {
    height: 100%;
    padding-bottom: 150rpx;
    box-sizing: border-box;
    overflow: scroll;
    padding-top: 32rpx;
}
.edit_wrapper .content {
    margin-bottom: 54rpx;
}
.edit_wrapper .content .title {
    font-size: 38rpx;
    color: #242424;
    margin-bottom: 30rpx;
    font-weight: bold;
}
.edit_wrapper .content .formbox .form-item{
    border-bottom: 1rpx solid #DFDFDF;
    margin-bottom: 30rpx;
    display: flex;
    overflow: hidden;
}
.edit_wrapper .content .formbox .form-item.error {
  border-bottom: 1rpx solid #F56C6C;
}
.edit_wrapper .content .formbox .form-item .label {
    font-size: 30rpx;
    color: #3e3e3e;
}
.edit_wrapper .content .formbox .form-item .form-control{
    flex: 1;
    position: relative
}
.edit_wrapper .content .formbox .form-item .form-control .el-input {
    width: 100%;
    text-align: right;
    color: #5a5a5a;
    font-size: 24rpx;
}
.edit_wrapper .content .formbox .rules .text_content .checkbox{
    font-size: 0;
    display: inline-block;
    flex: 0 0 26rpx;
}
.edit_wrapper .content .formbox .rules {
    margin: 90rpx auto 0;
}
.edit_wrapper .content .formbox .rules .text_content {
    display: flex;
    align-items: center;
    justify-content: center
}
.edit_wrapper .content .formbox .rules .text_content .checkbox .image_icon {
    width: 26rpx;
    height: 26rpx;
}
.edit_wrapper .content .formbox .rules .text_content .titlebox {
    padding-left: 14rpx;
    font-size: 24rpx;
    color: #515151;
}
.edit_wrapper .content .formbox .rules .text_content .titlebox .tit_1 {
    text-decoration: underline;
}
.input_holder_text {
    font-size: 24rpx;
    color: #979797;
    text-align: right
}
.edit_wrapper .footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 160rpx;
    background: rgba(255,255,255,0.87);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 44rpx;
    box-sizing: border-box;
}
.btnbox .btn {
    width: 426rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    padding: 0;
    border-radius: 6rpx;
    background: #3E3E3E;
    color: #ffffff;
    font-size: 32rpx;
}
.hoverclass {
    opacity: 0.7;
}

.edit_wrapper .content .formbox .form-item .form-control .errorText {
  position: absolute;
  right: 0;
  top: 0;
  background: #F56C6C;
  color: #ffffff;
  padding: 0 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  line-height: 1.8;
  z-index: 10;
  overflow: hidden;
  transform: translateY(55rpx);
  transition: all 0.15s ease-in;
  opacity: 0.5
}
.edit_wrapper .content .formbox .form-item .form-control .errorText.active {
  transform: translateY(0);
  opacity: 1
}