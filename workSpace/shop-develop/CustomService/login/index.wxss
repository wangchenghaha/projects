.wrapper {
    position: relative;
    height: 100%;
  }
  .wrapper .header {
    font-size: 0;
    position: relative;
  }
  .wrapper .header .logo_text {
    position: absolute;
    top: 86rpx;
    left: 46rpx;
    font-size: 38rpx;
    line-height: 1.4;
    text-align: center;
  }
  .wrapper .header .images_header {
    width: 750rpx;
    height: 380rpx;
  }
  .wrapper .content {
    position: absolute;
    bottom: 0;
    top: 500rpx;
    right: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    padding: 32rpx;
    box-sizing: border-box;
  }

  .wrapper .content .footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 160rpx;
    background: rgba(255,255,255,0.87);
    display: flex;
    align-items: center;
    padding: 0 44rpx;
    border-top: 1rpx solid #DBDBDB;
    box-sizing: border-box;
  }

  .wrapper .content .footer .btnbox {
    flex: 1;
    position: relative;
  }

  .btnbox .btn {
    width: 100%;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    padding: 0;
    border-radius: 6rpx;
    background: #3E3E3E;
    color: #ffffff;
    font-size: 32rpx;
  }
  .hoverclass {
    opacity: 0.7;
  }

  /* 登录 */
.wrapper .login .login-body {
    width: 700rpx;
    background: #ffffff;
    border-radius: 10rpx;
    padding: 30rpx;
    box-sizing: border-box;
}
.wrapper .login .login-body .title {
    font-size: 42rpx;
    text-align: center;
    font-weight: bold;
    margin-bottom: 60rpx;
}
.wrapper .login .login-body .form .form-item{
    border-bottom: 1rpx solid #DFDFDF;
    margin-bottom: 60rpx;
    display: flex;
    overflow: hidden;
}
.wrapper .login .login-body .form .form-item.error {
  border-bottom: 1rpx solid #F56C6C;
}
.wrapper .login .login-body .form .form-item .label {
    font-size: 30rpx;
    color: #3e3e3e;
}
.wrapper .login .login-body .form .form-item .form-control{
    flex: 1;
    position: relative
}
.wrapper .login .login-body .form .form-item .form-control .el-input {
    width: 100%;
    text-align: right;
    color: #5a5a5a;
    font-size: 24rpx;
}
.input_holder_text {
    font-size: 24rpx;
    color: #979797;
    text-align: right
}

.wrapper .login .login-body .form .form-item .form-control .errorText {
    position: absolute;
    right: 0;
    top: 0;
    background: #F56C6C;
    color: #ffffff;
    padding: 0 20rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    line-height: 1.8;
    z-index: 10;
    overflow: hidden;
    transform: translateY(55rpx);
    transition: all 0.15s ease-in;
    opacity: 0.5
  }
  .wrapper .login .login-body .form .form-item .form-control .errorText.active {
    transform: translateY(0);
    opacity: 1
  }