.first_wrapper {
    height: 100%;
    position: relative;
    overflow: hidden
}
.first_wrapper .title{
    font-size: 38rpx;
    line-height: 1;
    padding:24rpx 0 42rpx;
    box-sizing: border-box;
    text-align: left;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    background: #ffffff;
}
.first_wrapper .decorition{
    width: 100%;
    height: 100%;
    padding-top: 104rpx;
    padding-bottom: 180rpx;
    box-sizing: border-box;
    overflow: scroll;
}
.first_wrapper .decorition .image{
    width: 100%
}
.first_wrapper .decorition .item {
    margin-bottom: 20rpx;
    font-size: 28rpx;
    line-height: 1.6;
}
.first_wrapper .decorition .item .tit_1{
    margin-bottom: 10rpx;
    font-weight: bold;
}
.first_wrapper .decorition .item .con_1 {
    margin-bottom: 5rpx;
    color: #757575;
}
.first_wrapper .decorition .item .con_1 .tit_2 {
    margin-bottom: 10rpx;
    font-weight: bold;
    color: #000000;
}
