.wrapper {
    position: relative;
    height: 100%;
  }
  .wrapper .header {
    font-size: 0;
    position: relative;
  }
  .wrapper .header .logo_text {
    position: absolute;
    top: 86rpx;
    left: 46rpx;
    font-size: 38rpx;
    line-height: 1.4;
    text-align: center;
  }
  .wrapper .header .images_header {
    width: 750rpx;
    height: 558rpx;
  }
  .slide-image {
    width: 750rpx;
    height: 558rpx;
  }
  .wrapper .content {
    position: absolute;
    bottom: 0;
    top: 588rpx;
    right : 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    padding: 32rpx;
    box-sizing: border-box;
  }

  .wrapper .content .footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 160rpx;
    background: rgba(255,255,255,0.87);
    display: flex;
    align-items: center;
    padding: 0 44rpx;
    border-top: 1rpx solid #DBDBDB;
    box-sizing: border-box;
  }

  .wrapper .content .footer .btnbox {
    flex: 1;
    position: relative;
  }

  .btnbox .btn {
    width: 100%;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    padding: 0;
    border-radius: 6rpx;
    background: #3E3E3E;
    color: #ffffff;
    font-size: 32rpx;
  }
  .hoverclass {
    opacity: 0.7;
  }
  .select-icon {
    position: absolute;
    left: 0;
    bottom: 160rpx;
    z-index: 10;
    height: 60rpx;
    width: 100%;
    background: rgba(255,255,255,0.6);
    text-align: center;
  }