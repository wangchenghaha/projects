.wrapper {
    position: relative;
    height: 100%;
  }
  .wrapper .header {
    font-size: 0;
    position: relative;
    text-align: center
  }
  .wrapper .header .logo_text {
    position: absolute;
    top: 86rpx;
    left: 46rpx;
    font-size: 38rpx;
    line-height: 1.4;
    text-align: center;
  }
  .wrapper .header .images_header {
    width: 750rpx;
    height: 380rpx;
  }
  .wrapper .content {
    position: absolute;
    bottom: 0;
    top:500rpx;
    right: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    padding: 32rpx 32rpx 160rpx;
    box-sizing: border-box;
    overflow: scroll
  }
  .wrapper .content .header .logo{
    margin-bottom: 30rpx;
    text-align: center;
    margin-top: 17rpx;
  }
  .wrapper .content .header .logo .image {
    width: 74rpx;
    height: 70rpx;
    display: inline-block
  }
  .wrapper .content .header .title {
      font-size: 40rpx;
      color: #515151;
      font-weight: bold;
      margin-bottom: 30rpx;

  }
  .wrapper .content .header .code  {
      font-size: 24rpx;
      line-height: 1.5
  }
  .wrapper .content .header .shopname{
      font-size: 28rpx;
      line-height: 1.6;
      color: #5d5d5d;
      margin-bottom: 50rpx;
  }
  .wrapper .content .header .code .tit {
      color: #3e3e3e;
  }
  .wrapper .content .formbox {
    font-size: 0;
  }
  .wrapper .content .formbox .form-item{
      min-width: 50%;
      display: inline-block;
      font-size: 28rpx;
      line-height: 1.5;
      color: #5D5D5D;
      margin-bottom: 15rpx;
  }
  .wrapper .content .formbox .form-item.w100{
    width: 100%
  }
  .wrapper .content .formbox .form-item .label{
    font-weight: bold;
    display: inline-block
  }
  .wrapper .content .formbox .form-item .con {
    display: inline-block;
    text-align: justify 
  }

  .wrapper .content .tips {
      font-size: 24rpx;
      color: #333333;
      line-height: 1.7;
      text-align: center;
      margin-top: 30rpx;
      font-weight: bold;
  }


.wrapper .footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 160rpx;
    background: rgba(255,255,255,0.87);
    display: flex;
    align-items: center;
    padding: 0 44rpx;
    border-top: 1rpx solid #DBDBDB;
    box-sizing: border-box;
}

.wrapper .footer .concelbtn {
    padding-right: 42rpx;
}

.wrapper .footer .concelbtn .btn {
    width: 220rpx;
    height: 82rpx;
    border: 1rpx solid #5d5d5d;
    border-radius: 6rpx;
    background: #ffffff;
    color: #333333;
    font-size: 30rpx;
}

.wrapper .footer .btnbox {
    flex: 1;
    position: relative;
}

.btnbox .btn {
    width: 100%;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    padding: 0;
    border-radius: 6rpx;
    background: #3E3E3E;
    color: #ffffff;
    font-size: 32rpx;
}
.hoverclass {
    opacity: 0.7;
}