.rule-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
}

.rule {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 50%;
  width: 637rpx;
  transform: translate(-50%,0);
  background: #fff;
}

.rule .rule-title {
  color: #ec6a74;
}

.rule-item {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #333;
}

.rule-item .rule-text {
  margin-top: 10rpx;
}

.topimg-wrapper{
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.topimg-wrapper .topimg {
  position: absolute;
  left: 0;
  top: -4rpx;
  width: 650rpx;
  height: 303rpx;
}
.topimg-wrapper .topimg.selclass {
  top: -30rpx;
  width: 650rpx;
  height: 330rpx;
}
.rule-cont {
  position: relative;
  top: -10rpx;
  padding: 40rpx 35rpx;
  flex: 1;
  background: #fff;
  box-sizing: border-box;
  z-index: -1;
}
.bottomimg-wrapper {
  position: relative;
  width: 100%;
  height: 65rpx;
  overflow: hidden;
}
.bottomimg-wrapper .bottomimg {
  position: absolute;
  left: 0;
  top: -4rpx;
  width: 652rpx;
  height: 432rpx;
}

.bottomimg-wrapper .bottomnext {
  position: absolute;
  left: 50%;
  top: 20rpx;
  width: 35rpx;
  height: 20rpx;
  transform: translate(-50%,0);
}

.close-rule {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  width: 58rpx;
  height: 58rpx;
  z-index: 10;
}

.rule-cont-wrapper {
  position: relative;
  height: 100%;
  width: 100%;
}

.rule-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 10;
}