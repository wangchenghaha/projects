.container {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
  margin-top: 10rpx;
}

.container .list {
  width: 94%;
  margin-left: 3%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #f4f4f4;
}

.container .list .list-half {
  width: 340rpx;
  box-sizing: border-box;
  background: #f4f4f4;
  border-radius: 20rpx;
}

.container .list .list-half .card {
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.container .list .list-half .card .showImg {
  width: 100%;
  border-radius: 20rpx;
}

.container .list .list-half .card .picNum {
  width: 100rpx;
  height: 40rpx;
  position: absolute;
  color: white;
  background: #000;
  border-radius: 40rpx;
  opacity: .7;
  margin-left: 16rpx;
  margin-top: 20rpx;
}

.container .list .list-half .card .picNum .icon {
  width: 30rpx;
}

.container .list .list-half .card .picNum .text {
  font-size: 20rpx;
  margin-left: 6rpx;
}

.container .list .list-half .card .content {
  width: 94%;
  margin-left: 3%;
  font-size: 26rpx;
  line-height: 30rpx;
  font-weight: 500;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.container .list .list-half .card .autorInfo {
  width: 94%;
  margin-left: 3%;
}

.container .list .list-half .card .autorInfo .right {
  width: 70%;
  margin-top: 20rpx;
}

.container .list .list-half .card .autorInfo .right .icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  border: 2rpx solid #EE8777;
}

.container .list .list-half .card .autorInfo .right .name {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 10rpx;
  color: #666;
}

.container .list .list-half .card .autorInfo .left {
  width: 30%;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

.container .list .list-half .card .autorInfo .left .agreeNum {
  font-size: 24rpx;
  color: #666;
}

.container .list .list-half .card .autorInfo .left .icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.container .list .list-half .card .bottomV {
  height: 20rpx;
  border-radius: 20rpx;
}

.container .bottomView {
  width: 100%;
  height: 68rpx;
  background: #f4f4f4;
}
