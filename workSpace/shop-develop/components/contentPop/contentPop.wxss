@charset "UTF-8";
/* 选择尺码等 - 弹出框 */
.details_size {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
}

.details_size .details_opacity {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0;
}

.details_size .details_con {
  width: 100%;
  height: auto;
  clear: both;
  position: absolute;
  left: 0;
  bottom: -400px;
  background: #fff;
}

.details_size .details_con .close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.details_size .details_con .dd_con {
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 30rpx;
}

.details_size .details_con .dd_con .title {
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
}

.details_size .details_con .dd_con .text {
  max-height: 750rpx;
  overflow: scroll;
}

.details_size .details_con .dd_con .text .contentInfo {
  display: block;
  width: 100%;
  font-size: 26rpx;
  font-weight: 600;
  padding-bottom: 30rpx;
}

.details_size .details_con .konwThis {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

.animate {
  transform: scale(1);
}

.hide {
  transform: scale(0);
}
