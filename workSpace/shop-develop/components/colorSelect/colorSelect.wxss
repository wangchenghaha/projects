.goods-fixed {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  transform: translateY(120%);
  transition: 0.3s;
  z-index: 999;
}
.goods-fixed.show {
  transform: translateY(0);
}
.goods-fixed .goods {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 30rpx 20rpx;
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 400rpx;
  max-height: 1600rpx;
  background-color: #fff;
}
.goods-fixed .goods-color {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: solid 1rpx #ccc;
}
.goods-fixed .goods-color .list .item {
  display: inline-block;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 24rpx;
}
.goods-fixed .goods-color .list .item.active {
  background-color: #ff5000;
  color: #fff;
}
.goods-fixed .goods-color .list .item.no-stock {
  background-color: #f5f5f5;
  color: #ccc;
}
.goods-fixed .goods-color .count {
  margin-right: 20rpx;
  border: solid 1rpx #ccc;
}
.goods-fixed .goods-color .count text {
  display: inline-block;
  height: 36rpx;
}
.goods-fixed .goods-color .count text:nth-child(1), .goods-fixed .goods-color .count text:nth-child(3) {
  width: 50rpx;
  font-size: 36rpx;
  line-height: 36rpx;
}
.goods-fixed .goods-color .count text:nth-child(2) {
  height: 100%;
  width: 40px;
  border-left: solid 1rpx #ccc;
  border-right: solid 1rpx #ccc;
}
.goods-fixed .goods .confirm {
  margin: 20rpx 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #000;
  color: #fff;
  border-radius: 10rpx;
}
.goods-fixed .goods .icon-close {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

