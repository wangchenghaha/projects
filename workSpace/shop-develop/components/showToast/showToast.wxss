/* components/showToast/showToast.wxss */
image{
  display: block;
  width: 100%;
}
.toast-wrapper{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;

}
.toast-container{
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 240rpx;
  height: 180rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 10rpx;
}
.icon-wrapper{
  width: 105rpx;
}
.toast-title{
  padding-top: 10rpx;
  font-size: 20rpx;
  color: #fff;
}