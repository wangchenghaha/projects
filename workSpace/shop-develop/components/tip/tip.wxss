/* components/tip/tip.wxss */
.fixed-tip{
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 99999;
}
.fixed-tip .tip-content{
  margin: 0 auto;
  width: 85%;
  background: #ffffff;
}
.fixed-tip .tip-content .image-wrapper{
  padding: 30rpx 30rpx 60rpx;
  box-sizing: border-box;
}
.fixed-tip .tip-content .btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #a6a6a6;
  color: #fff;
}
.fixed-tip .close{
  position: relative;
  display: block;
  margin-top: 30rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: solid 4rpx #fff;
}
.fixed-tip .close:before{
  position: absolute;
  left: 0;
  top: 50%;
  content: '';
  margin-left: 10rpx;
  width: 50rpx;
  height: 4rpx;
  background: #fff;
  transform-origin: center;
  transform: rotate(45deg);
}
.fixed-tip .close:after{
  position: absolute;
  left: 0;
  top: 50%;
  content: '';
  margin-left: 10rpx;
  width: 50rpx;
  height: 4rpx;
  background: #fff;
  transform-origin: center;
  transform: rotate(-45deg);
}