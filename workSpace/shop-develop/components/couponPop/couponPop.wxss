@charset "UTF-8";
/* 选择尺码等 - 弹出框 */
.details_size {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
}

.details_size .details_opacity {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
}

.details_size .details_con {
  width: 100%;
  height: auto;
  clear: both;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
  border-radius: 10rpx;
}

.details_size .details_con .dd_con {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.details_size .details_con .dd_con .close {
  width: 50rpx;
  height: 50rpx;
  float: right;
  top: 0;
  right: 0;
  margin: 20rpx;
  position: absolute;
}

.details_size .details_con .dd_con .coupon_sizeOne {
  width: 100%;
  height: 800rpx;
  clear: both;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 50rpx;
}

.details_size .details_con .dd_con .coupon_sizeOne .couponText {
  font-size: 28rpx;
  color: #000;
  font-weight: 600;
}

.details_size .details_con .dd_con .coupon_sizeOne .coupon_sizeTwo {
  width: 100%;
  overflow-y: scroll;
  margin-top: 10rpx;
}

.details_size .details_con .dd_con .coupon_sizeOne .coupon_sizeTwo .couponImage {
  position: relative;
}

.details_size .details_con .dd_con .coupon_sizeOne .coupon_sizeTwo .couponImage image {
  width: 86%;
  max-height: 200rpx;
  margin-left: 7%;
}

.details_size .details_con .dd_con .coupon_sizeOne .coupon_sizeTwo .margin_top {
  margin-top: 20rpx;
}

.details_size .details_con .couponSubmit {
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #000;
  position: relative;
  text-align: center;
  font-size: 30rpx;
}

.details_size .details_con .iphoneXBtnBottom {
  margin-bottom: 68rpx;
}

.details_size .details_con .btnBottom {
  margin-bottom: 30rpx;
}

.animate {
  transform: scale(1);
}

.hide {
  transform: scale(0);
}
