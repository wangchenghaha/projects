.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  background: #f0f0f0;
  z-index: 999;
}
.footer image{
  display: block;
  width: 100%;
}
.footer-item {
  position: relative;
  flex: 1;
  flex-direction: column;
}
.footer-item text {
  font-size: 30rpx;
}
.footer-item .share-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  border: 0;
  opacity: 0;
  z-index: 999;
}
.footer-img {
  width: 100rpx;
  height: 100rpx;
}