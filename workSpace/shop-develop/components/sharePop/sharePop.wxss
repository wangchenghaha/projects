@charset "UTF-8";
/* 选择尺码等 - 弹出框 */
.details_size {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
}

.details_size .details_opacity {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
}

.details_size .details_con {
  width: 100%;
  height: auto;
  clear: both;
  position: absolute;
  top: 160rpx;
  border-radius: 10rpx;
}

.details_size .details_con .dd_con {
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.details_size .details_con .dd_con .close {
  width: 50rpx;
  height: 50rpx;
  float: right;
  top: 0;
  right: 10%;
  margin: 20rpx;
  position: absolute;
}

.details_size .details_con .dd_con .bigImage {
  width: 80%;
}
