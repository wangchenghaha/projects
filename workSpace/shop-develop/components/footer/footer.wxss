.footer{
  padding: 30rpx 0;
  font-size: 20rpx;
}
.version{
  color: #ccc;
  text-align: center;
}
.text{
  display: flex;
  justify-content: center;
  align-items: center;
}
.text .text-item{
  padding: 0 10rpx;
  height: 26rpx;
  line-height: 26rpx;
  color: rgb(6, 118, 254);
}
.text .text-item:nth-child(2){
  border-left: solid 1rpx #ccc;
}
.business{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  z-index: 999999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box{
  width: 100%;
  height: 40rpx;
  background: rgba(245, 245, 245, 0.98);
}
.record-item{
  padding-bottom: 10rpx;
}
.record-img{
  margin-right: 10rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
}