@charset "UTF-8";
.wrapper {
  width: 100%;
  height: 100%;
  /*导航*/
  /* 商品列表 */
}

.wrapper .scroll-header {
  display: flex;
  white-space: nowrap;
}

.wrapper .scroll-header .nav {
  width: 188rpx;
  display: inline-block;
}

.wrapper .scroll-header .nav .nav-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border: solid 2rpx #000;
  border-left: none;
}

.wrapper .scroll-header .nav .nav-item:nth-child(1) {
  border-left: solid 2rpx #000;
}

.wrapper .scroll-header .nav .nav-item.active {
  background: #000;
  color: #fff;
}

.wrapper .scroll-header .nav .nav-item .triangle {
  display: inline-block;
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #fff;
  transition: all 0.3s;
}

.wrapper .scroll-header .nav .nav-item .triangle.active {
  transform: rotate(180deg);
  transform-origin: center;
}

.wrapper .goods-wrapper {
  margin: 20rpx auto;
  height: 100%;
  width: 98%;
}

.wrapper .goods-wrapper .goods-row {
  display: flex;
  justify-content: space-around;
}

.wrapper .goods-wrapper .goods-row goods-item {
  flex: 1;
  max-width: 49%;
}

.wrapper .goods-wrapper .no-goods {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wrapper .goods-wrapper .no-goods image {
  width: 45%;
}

.wrapper .goods-wrapper .no-goods text {
  font-size: 36rpx;
}
