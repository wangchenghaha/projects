page {
  width: 100%;
  height: 100%;
  background-color: #E6E6E6;
}

.container {
  width: 100%;
  height: 100%;
}

.container .swiper {
  height: 900rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .fixed-right {
  position: fixed;
  top: 450rpx;
  right: 20rpx;
  z-index: 999;
}

.container .fixed-right .fixed-item {
  position: relative;
  margin-bottom: 20rpx;
  width: 76rpx;
  height: 76rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 5rpx #ccc;
  overflow: hidden;
}

.container .fixed-right .fixed-item .share {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.container .fixed-right .fixed-item .fixed-img {
  width: 50%;
}

.container .fixed-right .fixed-item .fixed-img image {
  width: 100%;
}

.container .markNotice {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.container .markNotice .h1 {
  font-size: 32rpx;
  margin-top: 30rpx;
}

.container .markNotice .h2 {
  width: 80%;
  font-size: 28rpx;
  margin-top: 30rpx;
  text-align: center;
}

.container .markNotice .h3 {
  font-size: 26rpx;
  margin-top: 30rpx;
  color: grey;
}

.container .markNotice .submitBtn {
  width: 300rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
  border: 2rpx solid #000;
}

.container .bottomBtn {
  position: fixed;
  bottom: 0;
  width: 100%;
  line-height: 86rpx;
  text-align: center;
  background: #000;
  font-size: 32rpx;
  color: white;
}

.container .iphoneXbottomBtn {
  position: fixed;
  bottom: 68rpx;
  width: 100%;
  line-height: 86rpx;
  text-align: center;
  background: #000;
  font-size: 32rpx;
  color: white;
}
