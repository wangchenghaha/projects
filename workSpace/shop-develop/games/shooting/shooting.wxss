/* games/shooting/shooting.wxss */

.content1, .content2, .content3 {
    width: 100%;
    padding: 0;
    margin: 0;
    overflow: hidden;
    position: relative;
}

.content1 {
    background-color: #000;
}

.content1 image, .content2 image, .content3 image {
    width: 100%;
    vertical-align: middle;
}

.swiper-content {
    position: absolute;
    top: 75vw;
    left: 0;
    width: 100%;
    height: 90vw;
}

.swiper-s {
    height: 90vw;
    position: relative;
}

.swiper-item {
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.swiper-item image {
    width: 92%;
}

.bg-black {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
}

.tips {
    position: absolute;
    width: 84%;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    height: 140vw;
    background-image: url(https://cdn.bestseller.com.cn/assets/h5/JACKJONES/image/ruleTipshooting.png?v=55);
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.rules-list {
    margin-top: 170rpx;
    padding: 0 50rpx;
    overflow: auto;
    height: 110vw;
    font-size: 26rpx;
    width: 86%;
}

.list-bottom {
    margin-top: 30rpx;
}

.font-b {
    font-weight: bold;
}

.mgt8 {
    margin-top: 2rpx;
}

::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    color: transparent;
}

.close-tips {
    position: absolute;
    right: 16rpx;
    top: 0rpx;
    width: 50rpx;
    height: 50rpx;
}

.re-count {
    position: absolute;
    left: 39vw;
    top: 44.4vw;
    color: #fff;
    font-weight: bold;
}

.open-tips {
    position: absolute;
    right: 15vw;
    top: 44.4vw;
    width: 30vw;
    height: 7.2vw;
}

.city-list {
    position: absolute;
    top: 64vw;
    left: 5%;
    width: 90%;
    height: 210vw;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.single-city {
    width: 27vw;
    margin-bottom: 7vw;
    position: relative;
    height: 68vw;
}

.single-city-btn {
    width: 18vw;
    height: 8vw;
    position: absolute;
    bottom: 1vw;
    left: 5vw;
}

.coupon-con {
    position: absolute;
    left: 4vw;
    bottom: 12vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 92vw;
}

.coupon-1, .coupon-2 {
    width: 44vw;
    height: 18vw;
}

.swiper-content .arrow {
    width: 60rpx;
    height: 60rpx;
}

.swiper-content .prev {
    position: absolute;
    left: 8vw;
    top: 48%;
    transform: rotate(180deg);
}

.swiper-content .next {
    position: absolute;
    right: 8vw;
    top: 48%;
}

.swiper-s .itemImg {
    position: absolute;
    width: 100%;
    height: 70vw !important;
    z-index: 5;
    opacity: 0.7;
    top: 7vw;
}

.swiper-s .active {
    opacity: 1;
    z-index: 10;
    height: 84vw !important;
    top: 1vw;
    transition: all .2s ease-in 0s;
}

.go-classify {
    position: absolute;
    bottom: 36vw;
    left: 4vw;
    width: 92vw;
    height: 39vw;
}

.vote-total {
    position: absolute;
    bottom: 10.5vw;
    left: 18vw;
    color: #fff;
    font-size: 24rpx;
    font-weight: 600;
}