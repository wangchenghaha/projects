@charset "UTF-8";
page {
  background: #003bae;
}

.container {
  width: 100%;
  height: 100%;
}

.container .backgroundImg {
  position: absolute;
  width: 100%;
}

.container .logoImg {
  position: absolute;
  width: 70%;
  z-index: 9;
  left: 50%;
  top: 14%;
  transform: translateX(-50%);
}

.container .backImg {
  position: absolute;
  width: 40rpx;
  top: 7%;
  z-index: 10001;
  left: 5%;
}

.container .gameMode {
  position: absolute;
  z-index: 9;
  left: 50%;
  top: 902rpx;
  transform: translateX(-50%);
  font-size: 46rpx;
  color: #ffbd5f;
  -webkit-text-stroke: 2rpx #745dff;
  font-weight: 600;
}

.container .pointArea {
  position: absolute;
  width: 50%;
  height: 200rpx;
  z-index: 9;
  left: 50%;
  top: 460rpx;
  transform: translateX(-50%);
}

.container .pointArea .pointImg {
  width: 200rpx;
}

.container .playGame {
  position: absolute;
  width: 50%;
  height: 200rpx;
  z-index: 9;
  left: 50%;
  top: 700rpx;
  transform: translateX(-50%);
}

.container .gameArea {
  display: grid;
  position: absolute;
  width: 65%;
  height: 489rpx;
  z-index: 9;
  left: 50%;
  top: 1031rpx;
  transform: translateX(-50%);
  grid-template-columns: repeat(auto-fill, 33.33%);
  /** 平铺宽度为100px的单元格 */
  justify-content: center;
  /** 水平居中  */
  -webkit-perspective: 1500;
  -moz-perspective: 1500;
}

.container .gameArea .flow-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.container .gameArea .flow-item .goodsImage {
  backface-visibility: hidden;
  position: absolute;
  width: 100%;
}

.container .gameArea .flow-item .b1 {
  transform: rotateY(0deg);
}

.container .gameArea .flow-item .b2 {
  transform: rotateY(-180deg);
}

.fistpage {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10000;
}

.bounced {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
}

.bounced-firstPop {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bounced-firstPop .toastBg {
  width: 80%;
  position: relative;
}

.bounced-firstPop .toastBg .backgroundImg {
  position: absolute;
  width: 100%;
}

.bounced-firstPop .toastBg .info {
  position: absolute;
  width: 60%;
  margin-left: 20%;
  top: 18%;
}

.bounced-firstPop .toastBg .info .commonTxt {
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #fff;
}

.bounced-firstPop .toastBg .info .pointTxt {
  font-size: 42rpx;
  color: red;
  font-weight: 900;
  -webkit-text-stroke: 1rpx white;
}

.bounced-firstPop .toastBg .info_1 {
  position: absolute;
  width: 100%;
  top: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bounced-firstPop .toastBg .info_1 .commonTxt {
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #fff;
}

.bounced-firstPop .toastBg .info_1 .pointTxt {
  font-size: 42rpx;
  color: red;
  font-weight: 900;
  -webkit-text-stroke: 1rpx white;
}

.bounced-firstPop .toastBg .giftLight {
  width: 160rpx;
  height: 140rpx;
  position: absolute;
  top: 245rpx;
  left: 50%;
  transform: translateX(-50%);
}

.bounced-firstPop .toastBg .puzzleImg {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 255rpx;
  left: 50%;
  transform: translateX(-50%);
}

.bounced-firstPop .toastBg .invite {
  width: 300rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.bounced-firstPop .toastBg .share {
  width: 300rpx;
  height: 80rpx;
  position: absolute;
  background: none;
  top: 290rpx;
  left: 50%;
  transform: translateX(-50%);
}

.bounced-firstPop .toastBg .share::after {
  border: none;
}

.bounced-firstPop .toastBg .againGame {
  width: 260rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.bounced-firstPop .toastBg .close {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
}

.bounced-firstPop .toastBg .close1 {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.bounced-firstPop .toastBg .goodsPush {
  width: 100%;
  bottom: -200rpx;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
}

.bounced-firstPop .toastBg .goodsPush .goodsBg {
  position: absolute;
  width: 100%;
  bottom: 0;
}

.bounced-firstPop .toastBg .goodsPush .title {
  position: absolute;
  width: 100%;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
  top: -235rpx;
  font-size: 24rpx;
  color: yellow;
  font-style: italic;
}

.bounced-firstPop .toastBg .goodsPush .goodsInfo {
  width: 90%;
  position: absolute;
  top: -150rpx;
  margin-left: 5%;
  display: flex;
}

.bounced-firstPop .toastBg .goodsPush .goodsInfo .goodsImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.bounced-firstPop .toastBg .goodsPush .goodsInfo .goodsTitle {
  width: 200rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  color: white;
  margin-left: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bounced-firstPop .toastBg .goodsPush .goodsInfo .goods {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bounced-firstPop .toastBg .goodsPush .goodsInfo .goods .goodsPrice {
  font-size: 28rpx;
  color: yellow;
}

.bounced-firstPop .toastBg .goodsPush .goodsInfo .goods .goodsDetail {
  width: 120rpx;
  text-align: center;
  line-height: 36rpx;
  border: yellow 2rpx solid;
  font-size: 24rpx;
  color: yellow;
  margin-top: 5rpx;
}

.musicImg {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 22%;
  z-index: 9;
  right: 6%;
  opacity: 0.5;
}

/* 旋转class */
.music-on {
  animation: music-rotate 4s linear infinite;
}

/* 旋转动画 */
@keyframes music-rotate {
  0% {
    transform: rotateZ(0deg);
  }
  100% {
    transform: rotateZ(360deg);
  }
}
