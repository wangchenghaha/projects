.container {
  width: 100%;
  height: 100%;
  position: relative;
}

.container .petBg {
  width: 100%;
  height: 100%;
}

.container .petArea {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 27%;
  left: 0;
}

.container .petArea .littlePet {
  display: inline-block;
  width: 240px;
  height: 240px;
}

.container .petChoose {
  width: 90%;
  position: absolute;
  z-index: 10;
  bottom: 18%;
  margin-left: 5%;
}

.container .petChoose .petBtn {
  width: 140rpx;
  margin-left: 18rpx;
  margin-right: 18rpx;
}

.container .chooseBtn {
  width: 340rpx;
  position: absolute;
  z-index: 20;
  bottom: 9%;
}
