page {
  width: 100%;
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg-img {
  position: absolute;
  top: 0;
  left: 0;
}

.bg-startGame {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 403rpx;
}

.bg-gameOver {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.bg-gameOver .positionView {
  position: relative;
  width: 700rpx;
}

.bg-gameOver .positionView .num {
  position: absolute;
  left: 20%;
  font-size: 34rpx;
  color: #49A813;
}

.bg-gameOver .positionView .closed {
  position: absolute;
  top: 11%;
  right: 15rpx;
  width: 100rpx;
  height: 100rpx;
}

.bg-gameOver .positionView .play {
  position: absolute;
  bottom: 11%;
  left: 50%;
  transform: translateX(-50%);
  width: 50%;
  height: 120rpx;
}

.bg-gameOver .positionView .share {
  position: absolute;
  bottom: 11%;
  left: 50%;
  transform: translateX(-50%);
  width: 50%;
  height: 120rpx;
  background: none;
}

.bg-gameOver .positionView .share::after {
  border: none;
}

.bg .bouncedBg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: .5;
}
