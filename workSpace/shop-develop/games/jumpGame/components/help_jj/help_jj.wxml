        <image src="{{imgPath}}helpBg.jpg" style="width:100%;" mode="widthFix" />

        <view class="img">
            <image src="{{imgPath}}help1.png" style="width:100%;" mode="widthFix" />
        </view>

        <view class="icon" style="left: 21%;">
            <image src="{{myIcon}}" style="width:100%;height:100%;" />
        </view>
        <view class="icon" style="right: 22.5%;">
            <image src="{{otherIcon}}" style="width:100%;height:100%;" />
