page {
  background: #fff;
}
view.container {
  position: relative;
  color: white;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #cc2d29;
}
view.container image.bg_img {
  position: absolute;
  top: 0;
  left: 0;
}
view.container .avatar-nickname-box {
  position: absolute;
  left: 114rpx;
  top: 178rpx;
  z-index: 9;
  display: flex;
  justify-content: center;
  padding-right: 90rpx;
}
view.container .avatar-nickname-box .userAvatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}
view.container .avatar-nickname-box .avatar_center {
  width: 30rpx;
}
view.container .avatar-nickname-box .avatar_right {
  display: flex;
  flex-direction: column;
  text-align: center;
  flex: 1;
}
view.container .avatar-nickname-box .avatar_right .avatar_right_top {
  margin-top: 40rpx;
}
view.container .avatar-nickname-box .avatar_right .avatar_right_top .userNick {
  font-size: 32rpx;
  margin-left: 20rpx;
}
view.container .avatar-nickname-box .avatar_right .avatar_right_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 24rpx;
  width: 100%;
  margin-left: 38rpx;
}
view.container view.borad_btn {
  position: absolute;
  top: 370rpx;
  left: 230rpx;
  width: 280rpx;
  height: 60rpx;
  z-index: 9;
}
view.container view.borad_btn view {
  width: 280rpx;
  height: 60rpx;
}
view.container view.payment_btn_group {
  width: 600rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  position: absolute;
  left: 65rpx;
  top: 980rpx;
  z-index: 9;
}
view.container view.payment_btn_group view {
  width: 240rpx;
  height: 80rpx;
}
view.container view.payment_btn_group button {
  display: block;
  padding-left: 0px;
  padding-right: 0px;
  line-height: 10px;
  background-color: rgba(255, 255, 255, 0);
  width: 240rpx;
  height: 80rpx;
}
view.container view.payment_btn_group button::after {
  width: 0;
  height: 0;
  left: 0;
  top: 0;
}
view.container view.payment_btn_group .button-hove {
  background: transparent;
}
view.container .fission {
  margin: 0rpx 80rpx 60rpx;
  height: 190rpx;
  overflow: hidden;
}
view.container .post {
  position: relative;
  top: 0;
  z-index: 10;
}
