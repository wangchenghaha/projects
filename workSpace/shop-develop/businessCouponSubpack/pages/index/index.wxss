/* businessCouponSubpack/pages/index/index.wxss */
page{
  background-color: #f4f4f4;
  min-height:100vh;
}
view{
  box-sizing: border-box;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  width: 750rpx;
  background-color: #f4f4f4;
}
.coupon-list{
  position: relative;
  /* flex: 1; */
  width: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 50rpx 100rpx;

  justify-content: center;
}
.coupon-area{
  width: 100%;
}
.scroll{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.item{
  display: flex;
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.item .img{
  width: 84rpx;
  height: 84rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.txt{
  font-size: 28rpx;
}
.txt-l{
  font-size: 36rpx;
}
.txt-s{
  color: #999;
  font-size: 26rpx;
}
.btn{
  position: fixed;
  bottom: 60rpx;
  left: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  width: 670rpx;
  height: 90rpx;
  background-color: #0db20c;
  border-radius: 8rpx;
  margin: 0 auto;
}
.no-data{
  font-size: 28rpx;
  color: #999;
  text-align: center;
  width: 100%;
  padding-top: 20%;
}
.gzh-area{
  width:100%;
  max-height:500rpx;
  position: absolute;
  bottom:200rpx;
  left:50%;
  transform: translateX(-50%);
  padding:0 20rpx;
}
.gzh-area image{
  width:100%;
  height:100%;
}