.bg {
  width: 100%;
  height: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
  position: relative;
}

.bg .friendsView {
  position: absolute;
  top: 64%;
  left: 0;
  width: 100%;
  height: auto;
}

.bg .friendsView .shengyu {
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: white;
  text-shadow: 1px 1px 1px #4695f4,-1px -1px 1px #4695f4;
}

.bg .friendsView .startView {
  width: 100%;
  height: 111rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.bg .friendsView .startView .opaView {
  position: absolute;
  top: 15.5rpx;
  width: 190rpx;
  height: 80rpx;
  background-color: black;
  opacity: .5;
}

.bg .friendsView .startView .leftRightView {
  position: absolute;
  top: 15.5rpx;
  width: 190rpx;
  height: 80rpx;
}

.bg .friendsView .startView .leftRightView .subView {
  width: 100%;
  height: 100%;
  position: relative;
  text-align-last: left;
}

.bg .friendsView .startView .leftRightView .subView .posBotomView {
  position: absolute;
  bottom: 5rpx;
  left: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 25rpx;
  color: white;
}

.bg .friendsView .startView .leftRightView .subView .posView {
  position: absolute;
  top: 10rpx;
  left: 40rpx;
}

.bg .friendsView .startView .leftRightView .subView .posView .title {
  font-size: 28rpx;
  color: #FCBA34;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 30rpx;
}

.bg .friendsView .startView .leftRightView .subView .posView .title .leftImg {
  margin-left: 10rpx;
  vertical-align: top;
  width: 28rpx;
  height: 28rpx;
}

.bg .friendsView .startView .rightText {
  font-size: 28rpx;
  color: white;
  line-height: 80rpx;
  text-align: center;
}

.bg .friendsView .startView .startGame {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 346rpx;
  height: 100%;
}

.bg .friendsView .imgView {
  width: 726rpx;
  height: 314rpx;
  position: relative;
  margin: 0 auto;
}

.bg .friendsView .imgView .name {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24rpx;
  color: white;
  line-height: 55rpx;
  text-align: center;
  width: 100%;
}

.bg .friendsView .imgView .centerView {
  position: absolute;
  top: 20%;
  left: 5%;
  width: 90%;
  height: 52%;
  display: flex;
}

.bg .friendsView .imgView .centerView .subViews {
  width: 20%;
  height: 100%;
  overflow: hidden;
}

.bg .friendsView .imgView .centerView .subViews .icon {
  margin: 20rpx auto 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.bg .friendsView .imgView .centerView .subViews .iconBord {
  border: 3rpx solid #3BADEB;
}

.bg .friendsView .imgView .centerView .subViews .otherName {
  width: 80%;
  height: 36rpx;
  margin-left: 14rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  font-size: 18rpx;
  color: white;
  text-align: center;
  overflow: hidden;
  line-height: 35rpx;
}

.bg .friendsView .imgView .bottomView {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  height: 80rpx;
  font-size: 26rpx;
  color: white;
  text-align: center;
  line-height: 80rpx;
  background: none;
}

.bg .friendsView .imgView .bottomView::after {
  border: none;
}

.bouncedBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: .7;
}

.canOpenView {
  width: 696rpx;
  height: 734rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.canOpenView .imgView {
  transform: scale(0, 0);
  width: 100%;
  height: 100%;
  position: relative;
  animation: animate 0.2s linear 1;
  animation-fill-mode: forwards;
}

.canOpenView .imgView .topTitle {
  position: absolute;
  top: 0;
  left: 0;
  color: #FFA923;
  font-size: 45rpx;
  line-height: 50rpx;
  width: 100%;
  text-align: center;
}

.canOpenView .imgView .subTitle {
  position: absolute;
  top: 8%;
  left: 0;
  font-size: 40rpx;
  color: white;
  width: 100%;
  text-align: center;
}

.canOpenView .imgView .jiangpin {
  position: absolute;
  top: 42%;
  left: 50%;
  transform: translateX(-50%);
  width: 316rpx;
  height: 145rpx;
}

.canOpenView .imgView .closed {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 70rpx;
}

.oneSubView {
  width: 577rpx;
  height: auto;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.oneSubView .imgView {
  width: 100%;
  height: 100%;
  position: relative;
}

.oneSubView .imgView .bottomViewsss {
  position: absolute;
  bottom: 21%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 95rpx;
  color: white;
  line-height: 95rpx;
  text-align: center;
  font-size: 34rpx;
  border-radius: 95rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}

.oneSubView .imgView .bottomViewsssShare {
  position: absolute;
  bottom: 21%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 95rpx;
  background: none;
}

.oneSubView .imgView .bottomViewsssShare::after {
  border: none;
}

.oneSubView .imgView .subTitle {
  font-size: 34rpx;
  color: #BE6E53;
  position: absolute;
  left: 0;
  width: 100%;
  text-align: center;
}

.oneSubView .imgView .closed {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 70rpx;
}

@keyframes animate {
  0% {
    transform: scale(0, 0);
  }
  100% {
    transform: scale(1, 1);
  }
}

.guize {
  position: fixed;
  top: 45%;
  right: 20rpx;
  padding-top: 5rpx;
  width: 65rpx;
  height: 63rpx;
  color: white;
  font-size: 24rpx;
  line-height: 30rpx;
  background-color: black;
  opacity: .5;
  border-radius: 20rpx;
  text-align: center;
}

.sanjiao {
  position: fixed;
  top: 4.5%;
  left: 3%;
  width: 42rpx;
  height: 59rpx;
  z-index: 99999;
}

.zhanwei {
  position: fixed;
  top: 0;
  left: 0;
  opacity: .1;
  width: 100%;
  height: 100%;
  z-index: 999999;
}
