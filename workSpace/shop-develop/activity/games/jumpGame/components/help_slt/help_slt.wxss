page {
  width: 100%;
  height: 100%;
  background: #febbde;
}

.bg {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg .logo {
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translateX(-50%);
  width: 169rpx;
}

.bg .imgView {
  width: 100%;
  height: auto;
  position: relative;
}

.bg .imgView .img {
  width: 100%;
  position: absolute;
  top: 42%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.bg .imgView .guizeBtnViewOpa {
  position: fixed;
  top: 230rpx;
  right: -20rpx;
  width: 150rpx;
  height: 50rpx;
  background-color: white;
  border-radius: 50rpx;
  opacity: .5;
}

.bg .imgView .guizeBtnView {
  position: fixed;
  top: 230rpx;
  right: -45rpx;
  width: 150rpx;
  height: 50rpx;
  font-size: 23rpx;
  color: white;
  line-height: 50rpx;
}

.bg .imgView .icon {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  overflow: hidden;
}

.bg .imgView .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  top: 23%;
}

.bg .imgView .bottomView {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 130rpx;
}

.sanjiao {
  position: fixed;
  top: 6%;
  left: 3%;
  width: 42rpx;
  height: 59rpx;
  z-index: 999;
}

.goHome {
  position: fixed;
  top: 40%;
  right: 32rpx;
  width: 68rpx;
  height: 68rpx;
}

.zhanwei {
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 100%;
}
