@charset "UTF-8";
@keyframes scaleAnimate {
  0% {
    transform: scale(0.2);
    /*开始为原始大小*/
  }
  100% {
    transform: scale(1);
  }
}

.container {
  width: 100%;
  height: 100%;
  background: #8ebe06;
  overflow: hidden;
}

.container .myPoint {
  position: relative;
  width: 200rpx;
  height: 80rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.container .myPoint .pointImg {
  position: absolute;
  width: 100%;
}

.container .myPoint .point {
  position: absolute;
  font-size: 28rpx;
  color: #fff;
  -webkit-text-stroke: 1rpx #f7b603;
  top: 10rpx;
  left: 80rpx;
  font-weight: 900;
}

.container .giftSchedule {
  position: relative;
  width: 80%;
  margin-left: 10%;
  margin-top: 50rpx;
}

.container .giftSchedule .bottomLine {
  position: absolute;
  width: 100%;
  height: 20rpx;
  border-radius: 20rpx;
  background: #bfbfbf;
  border: 2rpx solid #fff;
  top: 88rpx;
}

.container .giftSchedule .bottomLine .topLine {
  position: absolute;
  height: 20rpx;
  border-radius: 20rpx;
  background: #fff370;
}

.container .giftSchedule .pointArea {
  position: absolute;
  width: 100%;
  margin-left: 10%;
  display: flex;
}

.container .giftSchedule .pointArea .Area_1 {
  width: 10%;
}

.container .giftSchedule .pointArea .Area_1 .centerArea {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .giftSchedule .pointArea .Area_1 .centerArea .text1 {
  width: 160rpx;
  line-height: 42rpx;
  background: #fff;
  color: #8ebe06;
  font-size: 24rpx;
  border-radius: 42rpx;
  text-align: center;
}

.container .giftSchedule .pointArea .Area_1 .centerArea .triang {
  width: 0px;
  height: 0px;
  border-style: solid;
  border-color: #fff transparent transparent transparent;
  border-width: 16rpx;
}

.container .giftSchedule .pointArea .Area_1 .centerArea .logo {
  width: 80rpx;
  height: 80rpx;
  margin-top: -20rpx;
  margin-right: -20rpx;
}

.container .giftSchedule .pointArea .Area_1 .centerArea .text2 {
  font-size: 24rpx;
  color: white;
}

.container .couponArea {
  width: 100%;
  height: 100%;
  margin-top: 260rpx;
  border-top-right-radius: 100rpx;
  border-top-left-radius: 100rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .couponArea .coupontitle {
  width: 400rpx;
  margin-top: 50rpx;
}

.container .couponArea .couponA {
  width: 90%;
  overflow: scroll;
}

.container .couponArea .couponA .coupon {
  width: 100%;
  margin-top: 40rpx;
}

.container .couponArea .couponA .coupon .couponImg {
  width: 70%;
}

.container .couponArea .couponA .coupon .nowUsed {
  width: 20%;
  margin-left: 5%;
  line-height: 60rpx;
  text-align: center;
  color: #8ebe06;
  font-size: 28rpx;
  border-radius: 60rpx;
  border: 2rpx #8ebe06 solid;
}

.bounced {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
}

.bounced-firstPop {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bounced-firstPop .couponbg {
  position: absolute;
  width: 80%;
}

.bounced-firstPop .couponArea {
  position: absolute;
  width: 65%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -30rpx;
}

.bounced-firstPop .couponArea .couponInfo {
  font: 28rpx;
  color: #047f12;
}

.bounced-firstPop .couponArea .couponImg {
  margin-top: 20rpx;
  width: 90%;
}

.bounced-firstPop .background {
  position: absolute;
  width: 80%;
}
