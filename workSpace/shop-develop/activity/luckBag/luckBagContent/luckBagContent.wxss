.nowrap {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.margin-auto {
  margin: 10rpx auto 0;
  width: 95%;
}

.content {
  font-size: 32rpx;
  color: #000;
  padding-bottom: 200rpx;
}

.content image {
  display: block;
  width: 100%;
}

.content .swiper {
  height: 750rpx;
  width: 100%;
}

.content .swiper-wrapper {
  height: 750rpx;
}

.content .dargainInfo {
  width: 100%;
  height: 120rpx;
  display: flex;
  font-size: 26rpx;
  color: white;
}

.content .dargainInfo .left {
  position: relative;
  width: 50%;
  background: #f17435;
  font-size: 28rpx;
  color: white;
}

.content .dargainInfo .left .priceShow {
  display: flex;
  height: 120rpx;
  align-items: center;
}

.content .dargainInfo .left .priceShow-dargain {
  margin-left: 50rpx;
}

.content .dargainInfo .left .priceShow-single {
  margin-left: 50rpx;
  text-decoration: line-through;
  margin-top: 12rpx;
  color: #f5f5f5;
  opacity: 0.7;
}

.content .dargainInfo .left-people {
  line-height: 60rpx;
  margin-left: 20rpx;
}

.content .dargainInfo .left .Trianglebox {
  position: absolute;
  right: 0;
  top: 40rpx;
  width: 0px;
  height: 0px;
  border-style: solid;
  border-color: transparent #f8d057 transparent transparent;
  border-width: 10px;
}

.content .dargainInfo .right {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f17435;
  font-size: 32rpx;
  color: white;
}

.content .dargainInfo .right .priceShow {
  display: flex;
  height: 120rpx;
  align-items: center;
}

.content .goods {
  padding: 10rpx 0;
}

.content .goods-item {
  padding: 3rpx 0;
  line-height: 45rpx;
}

.content .goods-name {
  font-size: 26rpx;
}

.content .shareGuide {
  font-size: 24rpx;
  text-align: end;
  color: #8B8B8B;
}

.content .title {
  font-size: 26rpx;
  padding: 15rpx 0;
  border-top: solid 1rpx #8B8B8B;
}

.content .set-list {
  flex-wrap: wrap;
}

.content .set-list .set-item {
  width: 48%;
  padding-bottom: 30rpx;
}

.content .set-list .set-item .goods-name {
  width: 100%;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.content .set-list .set-item .goods-price {
  padding: 15rpx 0;
  font-size: 30rpx;
}

.content .set-list .set-item .btn-buy {
  display: inline-block;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #000;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.content .detailPic {
  width: 90%;
  margin-top: 40rpx;
  margin-left: 5%;
}

.content .detailImage {
  width: 100%;
  margin-top: 20rpx;
}

.content .details_size {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}

.content .details_size .details_opacity {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0;
}

.content .details_size .iphone-bottom {
  position: fixed;
  left: 0;
  bottom: 148rpx;
}

.content .details_size .iphone-nor {
  position: fixed;
  left: 0;
  bottom: 80rpx;
}

.content .details_size .select-size {
  padding-bottom: 30rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  transition: 0.3s;
  transform: translateY(120%);
}

.content .details_size .select-size.show {
  transition: 0.3s;
  transform: translateY(0);
}

.content .details_size .select-size .close {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.content .details_size .select-size .margin-auto {
  margin: 0 auto;
  width: 95%;
}

.content .details_size .select-size image {
  display: block;
  width: 100%;
}

.content .details_size .select-size .goods-base {
  padding: 10rpx 0;
  border-bottom: solid 2rpx #ccc;
  font-size: 26rpx;
  line-height: 30rpx;
}

.content .details_size .select-size .goods-base .preview {
  position: relative;
  margin-top: -50rpx;
  width: 160rpx;
}

.content .details_size .select-size .goods-base .goods-info {
  margin-left: 40rpx;
}

.content .details_size .select-size .goods-base .goods-info .price {
  font-size: 32rpx;
  color: #ff580c;
}

.content .details_size .select-size .goods-base .goods-info .stock, .content .details_size .select-size .goods-base .goods-info .size, .content .details_size .select-size .goods-base .goods-info .sku {
  padding: 5rpx 0;
}

.content .details_size .select-size .goods-base .goods-info .stock text, .content .details_size .select-size .goods-base .goods-info .size text, .content .details_size .select-size .goods-base .goods-info .sku text {
  font-size: 32rpx;
}

.content .details_size .select-size .goods-base .goods-title {
  padding: 10rpx 0 0 10rpx;
}

.content .details_size .select-size .goods-base .color {
  padding: 10rpx 0;
}

.content .details_size .select-size .goods-base .color-item {
  display: inline-block;
  padding: 0 12rpx;
  margin-right: 15rpx;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background: none;
  border-radius: 10rpx;
}

.content .details_size .select-size .goods-base .color-item::after {
  border: none;
}

.content .details_size .select-size .goods-base .color-item.selected {
  background: #ff580c;
  color: #fff;
}

.content .details_size .select-size .goods-base .color-item.no-stock {
  background: #f5f5f5;
  color: #cccccc;
}

.content .details_size .select-size .goods-base .goods-num {
  height: 52rpx;
  line-height: 52rpx;
  margin-right: 18rpx;
}

.fixed-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 99;
  height: 80rpx;
  background: #fff;
}

.fixed-bottom .fixed-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.fixed-bottom .fixed-item.border {
  border: solid 2rpx #000;
}

.iphoneX-bottom {
  height: 148rpx;
}
