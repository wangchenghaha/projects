page {
  width: 100%;
  height: 100%;
  background-color: #0072CB;
}

.bg {
  width: 100%;
  height: 100%;
  background-color: #0072CB;
}

.bg .topView {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  color: white;
}

.bg .topView .left {
  width: auto;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
}

.bg .topView .left .text {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.bg .topView .left .jinbi {
  margin-left: 10rpx;
  width: 24rpx;
  height: 24rpx;
  margin-top: 3rpx;
}

.bg .topView .right {
  flex: 1;
  margin-right: 20rpx;
  text-align: right;
  line-height: 100rpx;
  text-decoration: underline;
}

.bg .bottomView {
  margin-top: -20rpx;
  width: 100%;
  height: 100%;
}

.bg .bottomView .imgView {
  width: 693rpx;
  height: 232rpx;
  margin: 40rpx auto;
  position: relative;
}

.bg .bottomView .imgView .shoujia {
  position: absolute;
  bottom: 12%;
  left: 43%;
  width: auto;
  height: 30rpx;
  font-size: 30rpx;
  color: #FF0036;
}

.bg .bottomView .imgView .dui {
  position: absolute;
  right: 20rpx;
  top: 44rpx;
  width: 144rpx;
  height: 144rpx;
}

.bg .bottomView .imgView .shengyu {
  width: 184rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 10rpx;
  font-size: 28rpx;
  color: #FF0036;
}
