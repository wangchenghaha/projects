.bg {
  width: 100%;
  height: 100%;
}

.bg .topView {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
}

.bg .topView .left {
  width: auto;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
}

.bg .topView .left .text {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.bg .topView .left .jinbi {
  margin-left: 10rpx;
  width: 32rpx;
  height: 32rpx;
  margin-top: 7.5rpx;
}

.bg .topView .right {
  flex: 1;
  margin-right: 20rpx;
  text-align: right;
  line-height: 100rpx;
}

.bg .bottomView {
  margin-top: -20rpx;
  width: 100%;
  height: 100%;
}

.bg .bottomView .imgView {
  width: 690rpx;
  height: 192rpx;
  margin: 40rpx auto;
  position: relative;
}

.bg .bottomView .imgView .shoujia {
  position: absolute;
  bottom: 36%;
  left: 38%;
  width: auto;
  height: 30rpx;
  font-size: 30rpx;
  color: #ED6542;
}

.bg .bottomView .imgView .dui {
  position: absolute;
  right: 0;
  top: 0;
  width: 144rpx;
  height: 190rpx;
}

.bg .bottomView .imgView .dui .exchange {
  width: 34rpx;
}

.bg .bottomView .imgView .shengyu {
  width: 154rpx;
  text-align: center;
  position: absolute;
  bottom: 7%;
  left: 38%;
  font-size: 26rpx;
  color: #81470F;
}

.bouncedBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: .7;
}

.oneSubView {
  width: 557rpx;
  height: auto;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.oneSubView .imgView {
  width: 100%;
  height: 100%;
  position: relative;
}

.oneSubView .imgView .bottomViewsss {
  position: absolute;
  bottom: 21%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 95rpx;
  color: white;
  line-height: 95rpx;
  text-align: center;
  font-size: 34rpx;
  border-radius: 95rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}

.oneSubView .imgView .bottomViewsssShare {
  position: absolute;
  bottom: 21%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 95rpx;
  background: none;
}

.oneSubView .imgView .bottomViewsssShare::after {
  border: none;
}

.oneSubView .imgView .subTitle {
  font-size: 34rpx;
  color: white;
  position: absolute;
  left: 0;
  width: 100%;
  text-align: center;
}

.oneSubView .imgView .closed {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 70rpx;
}
