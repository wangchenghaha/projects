.bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.bg .firstImgView {
  z-index: 666;
  width: 100%;
  position: relative;
}

.bg .topViewBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.bg .topViewBg .qiziView {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 408rpx;
  height: 183rpx;
}

.bg .topViewBg .daojishi {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  line-height: 60rpx;
  text-align: center;
  color: #FF5762;
  font-size: 40rpx;
}

.bg .gameViewbg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.bg .gameViewbg-pos {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg .gameViewbg-pos .shuView {
  width: 100%;
  height: 60%;
  position: relative;
}

.bg .gameViewbg-pos .shuView .shu {
  position: absolute;
  top: 0;
  left: -30%;
  width: 160%;
  height: 328rpx;
  transform: translate3d(0, 100%, 0) scale(1);
  display: flex;
}

.bg .gameViewbg-pos .shuView .shu .leftRight {
  width: 233rpx;
  height: 100%;
}

.bg .gameViewbg-pos .shuView .shu .center {
  flex: 1;
}

.bg .gameViewbg-pos .zhangaiView {
  position: absolute;
  top: 100%;
  left: -20%;
  width: 140%;
  height: auto;
  display: flex;
  box-sizing: border-box;
  transform: translate3d(0, 0, 0) scale(1);
}

.bg .gameViewbg-pos .zhangaiView .zorjView {
  width: 33%;
  height: auto;
  position: relative;
}

.bg .gameViewbg-pos .zhangaiView .zorjView .jorz {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.bg .gameViewbg-pos .renwuView {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
}

.bg .gameViewbg-pos .renwuView .postionView {
  width: 100%;
  position: relative;
}

.bg .gameViewbg-pos .renwuView .postionView .renwu {
  position: absolute;
  height: 100%;
  top: 0;
  left: 0;
}

.bg .gameViewbg-pos .renwuView .postionView .fenshu {
  position: absolute;
  height: 50rpx;
  top: 0;
  left: 0;
}

.bg .gameViewbg-pos .renwuView .postionView .fenshu .text {
  line-height: 50rpx;
  font-size: 40rpx;
  text-align: center;
}

@keyframes fenshuAnimate {
  0% {
    opacity: 0;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translateY(-50rpx);
  }
}

@keyframes fenshuAnimate1 {
  0% {
    opacity: 0;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translateY(-50rpx);
  }
}

@keyframes scaleAnimate {
  0% {
    opacity: 0;
    transform: translate3d(0, 100%, 0) scale(1);
  }
  40% {
    opacity: 1;
  }
  70% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translate3d(0, -60%, 0) scale(0.3);
  }
}

@keyframes zhangaiAnimate {
  0% {
    opacity: 0;
    transform: translate3d(0, 0, 0) scale(1);
  }
  40% {
    opacity: 1;
  }
  70% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translate3d(0, var(--var), 0) scale(0.2);
  }
}

.bounced {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 666;
}

.bounced-daojishiView {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 191rpx;
  height: 222rpx;
}

.bounced-imgView {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 557rpx;
  height: 784rpx;
}

.bounced-imgView .bouncedPostion {
  width: 100%;
  height: 100%;
  position: relative;
}

.bounced-imgView .bouncedPostion .texts {
  position: absolute;
  left: 0;
  width: 100%;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 50rpx;
}

.bounced-imgView .bouncedPostion .bottomView {
  position: absolute;
  bottom: 21%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 95rpx;
  border-radius: 95rpx;
}

.bounced-imgView .bouncedPostion .bottomView-img {
  width: 100%;
  height: 100%;
  position: relative;
}

.bounced-imgView .bouncedPostion .bottomView-img-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  color: white;
  line-height: 95rpx;
  text-align: center;
  font-size: 34rpx;
}

.bounced-imgView .bouncedPostion .bottomViewShare {
  position: absolute;
  bottom: 21%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 95rpx;
  background: none;
}

.bounced-imgView .bouncedPostion .bottomViewShare::after {
  border: none;
}

.bounced-imgView .bouncedPostion .closed {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 58rpx;
  height: 58rpx;
}

.xuehuaView {
  position: fixed;
  z-index: 111;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.xuehuaView-img {
  width: 100%;
  height: 100%;
  transform: translate3d(0, -100%, 0);
  opacity: 1;
}

.xuehuaView .xuehua0 {
  animation: xuehuaAnimate 15s linear 0s infinite;
}

.xuehuaView .xuehua1 {
  animation: xuehuaAnimate 7.5s linear 0s infinite;
}

.xuehuaView .xuehua2 {
  animation: xuehuaAnimate 20s linear 0s infinite;
}

.xuehuaView .xuehua3 {
  animation: xuehuaAnimate1 10s linear 0s infinite;
}

.xuehuaView .xuehua4 {
  animation: xuehuaAnimate1 25s linear 0s infinite;
}

.xuehuaView .xuehua5 {
  animation: xuehuaAnimate1 12.5s linear 0s infinite;
}

@keyframes xuehuaAnimate {
  0% {
    opacity: 1;
    transform: translate3d(0, -100%, 0);
  }
  100% {
    opacity: 0;
    transform: translate3d(10%, 100%, 0);
  }
}

@keyframes xuehuaAnimate1 {
  0% {
    opacity: 1;
    transform: translate3d(0, -100%, 0);
  }
  100% {
    opacity: 0;
    transform: translate3d(-10%, 100%, 0);
  }
}

.touchView {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 555;
}

.sanjiao {
  position: fixed;
  top: 4.5%;
  left: 3%;
  width: 42rpx;
  height: 59rpx;
  z-index: 999;
}
