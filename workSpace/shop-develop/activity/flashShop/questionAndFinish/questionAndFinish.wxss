.bg {
  width: 100%;
  height: 100%;
}

.bg .imgView {
  width: 100%;
  height: auto;
  position: relative;
}

.bg .imgView .questionView {
  width: 90%;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
}

.bg .imgView .questionView .q {
  font-size: 45px;
}

.bg .imgView .questionView .title {
  font-size: 21px;
}

.bg .imgView .questionView .subTitleView {
  width: auto;
  height: auto;
  margin: 0 auto;
  display: inline-block;
}

.bg .imgView .questionView .subTitleView .subTitles {
  font-size: 30rpx;
  line-height: 65rpx;
  text-align: justify;
}

.bg .imgView .questionView .topColorView {
  width: 75%;
  line-height: 130rpx;
  font-size: 30px;
  font-weight: bold;
  text-align: center;
  margin: 70rpx auto 50rpx;
}

.bg .imgView .questionView .subDesc {
  padding-left: 10%;
  padding-right: 10%;
  box-sizing: border-box;
  font-size: 40rpx;
  line-height: 60rpx;
}

.bg .imgView .questionView .dakaFinishView {
  margin-top: 80rpx;
  font-size: 30px;
  font-weight: bold;
}

.bg .imgView .questionView .bottomView {
  margin: 40rpx auto 40rpx;
  width: 75%;
  height: 150rpx;
  border-top: 4rpx solid white;
  border-left: 4rpx solid white;
  border-right: 4rpx solid white;
  border-bottom: 8rpx solid white;
  padding-top: 18rpx;
  box-sizing: border-box;
}

.bg .imgView .questionView .bottomView-text {
  font-size: 35rpx;
  line-height: 55rpx;
}

.bg .imgView .questionView .bottomView-centerView {
  font-size: 35rpx;
  line-height: 100rpx;
}

.logo {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  width: 100%;
  font-size: 21rpx;
  color: #ADADAD;
  text-align: center;
}
