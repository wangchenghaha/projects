.container {
  min-height: 100%;
  font-size: 28rpx;
  background: #fff8ef;
}

.container .header {
  position: relative;
}

.container .header image {
  display: block;
  width: 100%;
}

.container .header .title {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  font-size: 38rpx;
  line-height: 40rpx;
  font-weight: 400;
}

.container .header .title .back {
  display: inline-block;
  position: absolute;
  left: 30rpx;
  top: 50%;
  width: 40rpx;
  height: 40rpx;
  border-top: solid 4rpx #fff;
  border-right: solid 4rpx #fff;
  transform: translateY(-50%) rotate(-135deg);
}

.container .wx-info {
  position: relative;
  flex-direction: column;
  transform: translateY(-30%);
}

.container .wx-info .avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.container .wx-info .nick-name {
  font-size: 36rpx;
  font-weight: 500;
}

.container .main {
  padding-bottom: 20rpx;
  border-bottom: solid 16rpx #F6ECE0;
}

.container .main .tip {
  color: #999;
  font-weight: 500;
}

.container .main .coupon {
  position: relative;
  margin: 20rpx auto;
  width: 364rpx;
  height: 265rpx;
}

.container .main .coupon image {
  display: block;
  width: 100%;
}

.container .main .coupon .info {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.container .main .coupon .info .value {
  font-size: 48rpx;
  color: #f40052;
}

.container .main .coupon .info .value text {
  font-size: 68rpx;
  line-height: 70rpx;
}

.container .main .coupon .info .threshold {
  color: #999;
  font-weight: 500;
}

.container .main .coupon .info .no-bag {
  padding: 0 30rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  font-weight: 400;
  color: #FD0052;
}

.container .main .my-coupon {
  font-size: 24rpx;
  color: #f40052;
}

.container .main .btn-wrapper {
  margin: 20rpx 0;
}

.container .main .btn-wrapper .btn {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.container .main .btn-wrapper .btn.share-btn {
  background: linear-gradient(0deg, #A44BFF, #FF41FD);
}

.container .main .btn-wrapper .btn.back-btn {
  background: linear-gradient(180deg, #FBC13B, #F4690E);
}

.container .main .desc {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999;
}

.container .user {
  padding: 20rpx;
  background: #fff8ef;
}

.container .user .title {
  color: #999;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.container .user-item {
  margin-bottom: 40rpx;
}

.container .user-item .user-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.container .user-item .user-info .user-txt {
  color: #999;
  font-weight: 500;
  margin-left: 20rpx;
}

.container .user-item .user-info .user-txt .nick-name {
  color: #333;
}

.container .user-item .user-info .user-txt .time {
  font-size: 24rpx;
  line-height: 36rpx;
}

.container .user-item .user-info .user-txt .best-luck-icon {
  margin: 0 10rpx;
  width: 25rpx;
  height: 25rpx;
}

.container .user-item .user-info .user-txt .best-luck-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffA447;
  line-height: 36rpx;
}

.container .user-item .user-coupon {
  flex-direction: column;
  width: 154rpx;
  height: 72rpx;
  background-repeat: no-repeat;
  background-size: 100%;
}

.container .user-item .user-coupon .value {
  font-size: 40rpx;
  color: #ff6c00;
  line-height: 40rpx;
}

.container .user-item .user-coupon .value text {
  font-size: 24rpx;
}

.container .user-item .user-coupon .threshold {
  font-size: 16rpx;
  color: #bc9324;
}

.container .detail-banner {
  padding: 20rpx 0;
  margin: 0 auto;
  width: 658rpx;
}

.container .detail-banner image {
  display: block;
  width: 100%;
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  flex-direction: column;
}

.popup .share {
  flex-direction: column;
  margin-bottom: 40rpx;
  width: 640rpx;
  height: 276rpx;
  font-size: 32rpx;
  background: #fff;
  border-radius: 20rpx;
}

.popup .share-btn {
  margin-top: 30rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 34rpx;
  border: none;
  background: #ffda5d;
  color: #be4a23;
}
