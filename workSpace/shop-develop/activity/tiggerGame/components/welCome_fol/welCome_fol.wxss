page {
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
}

.bg-btn {
  width: 380rpx;
  height: 100rpx;
  background-image: linear-gradient(#00DBFD, #0686DE);
  border-radius: 20rpx;
  margin: 0 auto;
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  font-size: 40rpx;
  color: white;
}

.shuoming {
  margin-left: -2rpx;
  position: absolute;
  top: 8%;
  left: 0;
  width: 100rpx;
  border: 1rpx solid white;
  text-align: center;
  color: white;
  font-size: 28rpx;
  line-height: 50rpx;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
}
