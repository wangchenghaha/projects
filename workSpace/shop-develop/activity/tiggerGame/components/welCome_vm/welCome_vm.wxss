page {
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
}

.bg .welcomeImgView {
  width: 696rpx;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.bg .welcomeImgView .imgView {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg .welcomeImgView .imgView .bg-btn {
  width: 400rpx;
  height: 125rpx;
  margin: 0 auto;
  position: absolute;
  bottom: 0;
  left: 53%;
  transform: translateX(-50%);
}

.shuoming {
  margin-left: -2rpx;
  position: absolute;
  top: 8%;
  left: 0;
  width: 120rpx;
  text-align: center;
  color: black;
  font-size: 28rpx;
  line-height: 60rpx;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background-color: #F5D287;
}
