.bg {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg .shuoming {
  margin-left: -2rpx;
  position: absolute;
  top: 10%;
  width: 120rpx;
  text-align: center;
  color: #F9DC47;
  font-size: 28rpx;
  line-height: 60rpx;
  background-color: #0072BA;
}

.bg .bgImageView {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.bg .imageView {
  width: 675rpx;
  height: auto;
  margin-bottom: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.bg .imageView-subView {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg .imageView .fenxiangView {
  position: absolute;
  bottom: 13%;
  left: 6%;
  right: 0;
  width: auto;
  height: 88rpx;
}

.bg .imageView .mianduimian {
  position: absolute;
  bottom: 2%;
  left: 6%;
  right: 0;
  width: auto;
  height: 88rpx;
}

.share {
  background: none;
  width: 100%;
  height: 100%;
}

.share::after {
  border: none;
}
