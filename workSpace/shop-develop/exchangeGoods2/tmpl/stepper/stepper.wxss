.stepper_frame {
    float: left;
    width: auto;
    height: 52rpx;
    background-color: white;
}
.minus {
    float: right;
    width: 52rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    border: 2rpx solid #ccc;
    border-right: none;
}

.plus {
    float: right;
    width: 52rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    border: 2rpx solid #ccc;
}

.count {
    float: right;
    width: 100rpx;
    height: 52rpx;
    text-align: center;
    border: 2rpx solid #ccc;
    border-right: none;
    font-size: 28rpx;
    line-height: 52rpx;
}