.pages {
    position: relative;
    width: 100%;
    height: 100%;
    line-height: 1;
}

.page-cont {
    position: relative;
    width: 100%;
    height: 100%;
}

.page-tit-wrap {
    padding: 75rpx 0;
    height: 100%;
    text-align: center;
    background: url('https://tc.woaap.com/lingzhi/sale/bg1.png') repeat-y;
    background-size: 100%;
}
.page-tit-wrap .index_tit {
    margin-bottom: 20rpx;
    width: 328rpx;
    height: 104rpx;
}
.page-tit-wrap .index_suc {
    display: block;
    margin: 0 auto;
    width: 80rpx;
    height: 80rpx;
}
.successtit {
    margin-top: 30rpx;
    font-size: 48rpx;
    font-weight: bold;
    color: #fff;
    text-align: center;
}
.infotit {
    margin-top: 60rpx;
    font-size: 20rpx;
    color: #fff;
    text-align: center;
}
.info-box {
    position: relative;
    margin: 60rpx auto 0 auto;
    padding-left: 170rpx;
    width: 560rpx;
    height: 165rpx;
    border: 2px solid #3e3e3e;
    background: #000;
    text-align: left;
    box-sizing: border-box;
}
.info-wrap {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    display: inline-block;
}
.info-item {
    font-size: 20rpx;
    color: #fff;
}
.info-item:nth-child(1) {
    margin-bottom: 35rpx;
}
.tip {
    padding: 0 20rpx;
    margin: 90rpx auto 0 auto;
    width: 560rpx;
    text-align: left;
    box-sizing: border-box;
}
.tip-title {
    margin-bottom: 20rpx;
    font-size: 24rpx;
    font-weight: bold;
    color: #fff;
}
.tip-cont {
    font-size: 20rpx;
    color: #fff;
    line-height: 30rpx;
}
.btn-wrap {
    margin: 90rpx auto 0 auto;
    width: 560rpx;
    height: 90rpx;
    box-sizing: border-box;
}
.btn-wrap .btn1 {
    padding-top: 20rpx;
    margin-bottom: 30rpx;
    width: 100%;
    height: 90rpx;
    background: #fff;
    border-radius: 0;
    border: none !important;
    line-height: 1;
    font-weight: bold;
    box-sizing: border-box;
}
.btn-wrap .btn2 {
    width: 100%;
    height: 90rpx;
    font-size: 24rpx;
    background: transparent;
    border-radius: 0;
    border:1px solid #fff;
    color: #fff;
    font-weight: bold;
    line-height: 90rpx;
    box-sizing: border-box;
}

.btn-wrap .btn-button {
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
    color: #000;
    font-size: 24rpx;
    font-weight: bold;
    border: none;
    border-radius: 0;
    margin-bottom: 20rpx;
}

.btn-wrap .btn-button::after {
    display: none;
}

.btn-wrap .btn1 view:nth-child(1) {
    font-size: 24rpx;
    color: #000;
    font-weight: bold;
}
.btn-wrap .btn1 view:nth-child(2) {
    font-size: 20rpx;
    color: #000;
}

.btn-wrap button {
    padding: 0;
    margin: 0;
}

.btn-wrap button::after {
    display: none;
}