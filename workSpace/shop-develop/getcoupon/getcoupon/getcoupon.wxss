/* pages/createPoster/createPoster.wxss */

page {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  line-height: 1.2;
  overflow: hidden;
}

.zhigh {
  position: relative;
  z-index: 10;
}

.bgpic {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  top: 0;
}

.bgcard {
  position: absolute;
  width: 100%;
  top: 0rpx;
}

.offimg {
  position: absolute;
  top: -210rpx;
  left: 50%;
  transform: translate(-50%, 0);
  width: 400rpx;
}

.cont {
  width: calc(100% - 40rpx);
  height: 600rpx;
  margin-bottom: 34rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  justify-content: space-between;
}

.flex {
  display: flex;
}

.bgcont {
  width: calc(100% - 36rpx);
}

.bg {
  /* background-image: linear-gradient(141deg, #fdb963 0%, #fd6a57 100%); */
  border-radius: 12px;
  width: calc(100% - 145rpx);
  margin: 30rpx;
  padding-bottom: 22rpx;
  position: relative;
  overflow: hidden;
  padding-right: 85rpx;
  background-color: #cc0000;
  opacity: 0.9;
}

.brand-logo {
  position: absolute;
  top: -160rpx;
  z-index: 1111;
  color: #fff;
  max-height: 120rpx;
}

.bg.bgimgs {
  background-image: linear-gradient(180deg, #d6bc97 0%, #ae9269 100%);
}

.bgimgs .texts {
  text-decoration: underline;
  /* border-bottom: 1px solid #fff; */
}

.price {
  font-family: PingFangSC-Medium;
  font-size: 80rpx;
  color: #fff;
  letter-spacing: 0;
  width: 300rpx;
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}

.ptype {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  width: 175rpx;
  margin-left: 52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-btn {
  position: absolute;
  top: 15rpx;
  right: 50rpx;
  font-size: 28rpx;
  color: #fff;
}

.man {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: right;
  margin-top: 10rpx;
}

.pricegroup {
  justify-content: space-between;
  padding: 30rpx 30rpx;
  align-items: center;
}

.timegroup {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  margin: 8px 15px 0;
  border-top: 1px solid #f2c6c4;
  padding-top: 10rpx;
}

.modalbg {
  background: rgba(255, 255, 255, 0.40);
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 50rpx;
  font-size: 30rpx;
  color: #fff;
  z-index: 3;
  padding: 0 20rpx;
  text-align: center;
  display: flex;
  align-items: center;
}

.logo {
  height: 30rpx;
}

.wrapper {}

.backpage {
  background: #000;
  border-radius: 6rpx;
  width: calc(100% - 60rpx);
  height: 80rpx;
  line-height: 30rpx;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #fff;
  letter-spacing: 0;
  margin: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.bottom-img {
  position: absolute;
  bottom: 150rpx;
  left: 0;
  width: 100%;
}

.bottom-img .botimg {
  display: block;
  margin: 0 auto;
  width: 350rpx;
}

.mask {
  background: rgba(0, 0, 0, 0.70);
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 10;
}

.mask-content {
  position: absolute;
  bottom: 0;
  background: #FFFFFF;
  border-radius: 16rpx 16rpx 0 0;
  width: 100%;
  height: 242rpx;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.mask-content image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.mask-content .left,
.mask-content .right {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  position: relative;
  height: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
}

.btnmodal {
  background: rgba(0, 0, 0, .7);
  width: 100%;
  height: 100%;
  left: 0;
  position: absolute;
}

.share-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 11111;
}

.popleft,
.popright {
  position: absolute;
  width: 500rpx !important;
  height: 250rpx !important;
  top: -260rpx;
}

.popleft {
  left: 0;
}

.popright {
  right: 0;
}

.popleft text,
.popright text {
  position: absolute;
  left: 50rpx;
  top: 80rpx;
  color: #fff;
  font-size: 15px;
}