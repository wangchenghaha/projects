.container {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
}

.container .userInfo {
  width: 100%;
  height: 260rpx;
  background: #fff;
}

.container .userInfo .avatarImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  margin-left: 20rpx;
}

.container .userInfo .info {
  margin-left: 20rpx;
}

.container .userInfo .info .nickName {
  font-size: 32rpx;
  font-weight: 550;
}

.container .userInfo .info .detail {
  width: 320rpx;
  font-size: 22rpx;
  color: #666;
}

.container .userInfo .foucsed {
  width: 160rpx;
  line-height: 60rpx;
  background: #ddd7d7;
  text-align: center;
  font-size: 28rpx;
  border-radius: 60rpx;
  color: #fff;
  margin-right: 30rpx;
}

.container .userInfo .foucs {
  width: 160rpx;
  line-height: 60rpx;
  background: #000;
  text-align: center;
  font-size: 28rpx;
  border-radius: 60rpx;
  color: #fff;
  margin-right: 30rpx;
}

.container .selectTab {
  width: 100%;
  margin-top: 20rpx;
}

.container .selectTab .tab {
  width: 150rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: 550;
  color: #666;
  text-align: center;
  border-bottom: 5rpx #000 solid;
  color: black;
}

.container .trend {
  margin-top: 20rpx;
  background: #fbfbfb;
}
