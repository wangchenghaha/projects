.mc-container{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
  background-color: #fff;
}
.banner{
  width: 100%;
  height: 326rpx;
  position: relative;
  color: #fff;
}
.banner .points{
  font-size: 50rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%);
}
.banner .toMemberRewards{
  font-size: 30rpx;
  position: absolute;
  top: 60%;
  right: 5%;
}
.banner image{
  width: 100%;
  height: 100%;
}
.user{
  position: absolute;
  bottom: -35%;
  left: 50%;
  transform: translate(-50%);
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  margin-bottom: 20rpx;
}
.main{
  padding: 120rpx 40rpx 0;
  margin-top: 10rpx;
}
.points-info{
  display: flex;
  font-size: 25rpx;
}
.points-info>view{
  flex: 1;
}











