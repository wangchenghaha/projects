.pu-container{
  height: 100%;
  position: relative;
  overflow: auto;
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
  color:#fff;
  font-size: 28rpx;
  padding: 0 40rpx;
}
.header{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #fff;
  margin: 60rpx auto;
  border-radius: 50%;
  background:#fff;
  position:relative;
  overflow:hidden;
}
.header image{ display:block; width:100%; position:absolute; left:0; top:0; right:0;bottom:0;margin:auto;}
.main{
  margin-bottom: 100rpx;
}
.item-row{
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}
.item-left{
  width: 120rpx;
  margin-right: 50rpx;
}
.item-right{
  width: 380rpx;
}
.note{
  font-size: 24rpx;
  padding-top: 10rpx;
}
.item-right input,.item-right picker{
  text-align: center;
  /*padding-left: 20rpx;*/
  width: 100%;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
}
.item-right picker{
  padding: 4rpx 0;
}
button{
  text-align: center;
  display:block!important;
  width:50%;
  line-height:73rpx!important;
}
