    .wrap{ 
        width:100%; 
        height:100%; 
        clear:both; 
        background: #c44b38;
        overflow:hidden;
        display: flex;
        justify-content: center;
        padding-top: 30rpx;
    }

    .couponReceive{
        width: 96%;
        background: #fff;
        border-radius: 5rpx;
        overflow:hidden;
    }

    .coupon_title{
        width: 100%;
        height: 300rpx;
    }

    .notice{
        width: 100%;
        height: 40rpx;
        display: flex;
        align-items: center;
    }

    .notice text{
        line-height: 40rxp;
        font-size: 35rpx;
        color: white;
        text-align: center;
        margin-left: 350rpx;
        margin-right: 10rpx;
    }
    .notice image{
        width: 40rpx;
        height: 40rpx;
    }



    .takeUp{
        height: 50rpx;
        display: flex;
        justify-content: center;
    }

    .takeUp image{
    width: 50rpx;
    height: 50rpx;
    }

    .dottedLineLayout{
        width: 100%;
        border-top: 1px dashed #c44b38; 
    }

    .showInfo{
        width: 100%;
        font-size: 32rpx;
        color: #333;
        text-align: center;
        line-height: 80rpx;
        
    }

    .showSubmit{
        width: 100%;
        display: flex;
        justify-content: center;
        border-top: 1px solid #eee; 
        border-bottom: 1px solid #eee; 
    }

    .submitBtn{
        height: 140rpx;
        margin: 20rpx;
    }


    .dottedLineLayout .cancelBtn{
        width: 45%;
        height: 60rpx;
        float: right;
        background-color: white;
        color: black;
        font-size: 35rpx;
        text-align: center;
        margin: 20rpx;
    }
    
    .noticeContent{
        width: 94%;
        height: 300rpx;
        background: white;
        border-radius: 10rpx;
        margin-top: 20rpx;
        display: block;
        justify-content: center;
        padding: 20rpx;
        clear: both; 
        overflow: hidden;
        
    }

    .showSubmitPop{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
    }

    .submitPop{
        height: 620rpx;
        width: 80%;
        margin-left: 10%;
        background: white;
        border-radius: 10rpx;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .userImage{
        width: 100rpx;
        height: 100rpx;
        border-radius: 50%;
        margin-left: 50rpx;
        margin-top: 30rpx;
    }

    .title{
        font-size: 30rpx;
        margin-top: 30rpx;
    }

    .couponDes{
        font-size: 28rpx;
        margin-top: 5rpx;
    }

    .customePoint{
        font-size: 26rpx;
        margin-top: 30rpx;
    }

    .availablePoint{
        font-size: 26rpx;
        margin-top: 30rpx;
    }

    .couponOption{
        font-size: 30rpx;
        margin-top: 50rpx;
        display: flex;
        width: 400rpx;
    }

    .submit{
        width: 140rpx;
        line-height: 60rpx;
        text-align: center;
        background: #c44b38;
        color: white;
        border-radius: 60rpx;
    }

    .canncel{
        width: 140rpx;
        line-height: 60rpx;
        text-align: center;
        border: black 2rpx solid;
        color: black;
        border-radius: 60rpx;
    }

    .backPoint{
        width: 260rpx;
        line-height: 60rpx;
        text-align: center;
        font-size: 30rpx;
        color: #c44b38;
        margin-top: 30rpx;
        border-bottom: #c44b38 solid 2rpx;
    }

