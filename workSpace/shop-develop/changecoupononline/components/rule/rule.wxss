.rule-container {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.65);
}
.rule-wrapper {
  width: 680rpx;
  /* height: 715rpx; */
}
.rule-cont {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  width: 680rpx;
  height: 535rpx;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.rule-title {
  padding-bottom: 14rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000;
  border-bottom: 2px solid #999;
}
.cont {
  margin-top: 20rpx;
  position: relative;
  flex: 1;
}
.rule-scroll {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.rule-item {
  display: flex;
  font-size: 22rpx;
  color: #666;
  margin: 20rpx 0;
}
.rule-index {
  width: 30rpx;
}
.rule-text {
  flex: 1;
  line-height: 30rpx;
}
.line {
  width: 100%;
  height: 100rpx;
}
.line-one {
  width: 1px;
  height: 100%;
  margin: 0 auto;
  background: #fff;
}

.texts .rule_text{
  font-size: 26rpx;
  color: #666;
  line-height: 35rpx;
  text-align: justify;
}