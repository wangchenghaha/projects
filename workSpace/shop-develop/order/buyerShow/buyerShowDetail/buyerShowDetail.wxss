page {
  width: 100%;
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  background-color: #131313;
  display: flex;
  flex-direction: column;
}

.bg .topView {
  width: 100%;
  height: 110rpx;
  display: flex;
}

.bg .topView .left {
  width: 50%;
  height: 100%;
  display: flex;
}

.bg .topView .left .icon {
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #EE8777;
  overflow: hidden;
}

.bg .topView .left .nickName {
  margin-top: 20rpx;
  line-height: 75rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: white;
}

.bg .topView .right {
  width: 50%;
  height: 100%;
  padding-top: 20rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: white;
  line-height: 75rpx;
  text-align: right;
}

.bg .swiper {
  width: 100%;
  height: 70%;
}

.bg .bottomView {
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  width: auto;
  flex: 1;
}

.bg .bottomView-topView {
  width: 100%;
  height: 170rpx;
  display: flex;
}

.bg .bottomView-topView .imgView {
  width: 170rpx;
  height: 100%;
}

.bg .bottomView-topView .cloView {
  margin-left: 20rpx;
  flex: 1;
  height: 100%;
  position: relative;
}

.bg .bottomView-topView .cloView .commentView {
  height: 70%;
  padding-top: 5rpx;
  box-sizing: border-box;
}

.bg .bottomView-topView .cloView .oriPrice {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  color: #FF5E2F;
  font-size: 36rpx;
}

.bg .bottomView-zanView {
  width: 100%;
  height: 40rpx;
  display: flex;
}

.bg .bottomView-zanView .left {
  flex: 1;
}

.bg .bottomView-zanView .share {
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
  margin-left: 40rpx;
  margin-right: 10rpx;
}

.bg .bottomView-zanView .zan {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.bg .bottomView-zanView .zanNum {
  font-size: 24rpx;
  color: white;
  text-align: center;
  line-height: 50rpx;
}

.bouncedBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: .1;
}

.compositeImgView {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: auto;
}

.compositeImgView .closedView {
  width: 32px;
  height: 32px;
  margin: 30rpx auto 0;
}

.canvas {
  position: fixed;
  top: 0;
  left: 0;
  margin-top: 99999px;
  background-color: white;
}
