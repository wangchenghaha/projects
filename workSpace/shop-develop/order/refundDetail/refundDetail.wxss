.wrap {
  padding-bottom: 120rpx;
}
.wrap .banner {
  padding: 50rpx 0;
  width: 100%;
  background: #ff5500;
}
.wrap .banner .text {
  display: block;
  margin: 0 auto;
  width: 600rpx;
  font-size: 36rpx;
  color: #fff;
}
.wrap .banner .text.refund-time {
  margin-top: 30rpx;
  font-size: 30rpx;
}
.wrap .banner .text:nth-child(1) {
  margin-top: 20rpx;
}
.wrap .banner .text:nth-child(2) {
  padding-top: 20rpx;
  font-size: 32rpx;
}
.wrap .refund-address {
  position: relative;
  margin: 10rpx auto;
  width: 95%;
  font-size: 26rpx;
  border-bottom: solid 2rpx #ccc;
}
.wrap .refund-address .copy {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 160rpx;
  height: 50rpx;
  border: solid 1rpx #ccc;
  border-radius: 10rpx;
}
.wrap .title {
  margin-bottom: 20rpx;
  padding: 10rpx;
  font-size: 26rpx;
  border-bottom: solid 2rpx #ccc;
}
.wrap .refund-code {
  margin: 0;
  border: none;
}
.wrap .footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 120rpx;
  font-size: 36rpx;
  background: #fff;
}
.wrap .footer .contact {
  margin: 10rpx auto;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background: #000;
  color: #fff;
  border-radius: 50rpx;
}
.wrap .popup image {
  display: block;
  width: 100%;
}
.wrap .popup-img {
  position: relative;
  width: 80%;
  height: auto;
}
.wrap .popup-img .item {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
}
.wrap .popup-img .item.copy {
  bottom: 216rpx;
}
.wrap .popup-img .item.save-img {
  bottom: 273rpx;
}

