.order-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.order-item .order-code {
  margin-bottom: 15rpx;
  font-size: 26rpx;
}
.order-item .order-code .status {
  color: #FF5000;
}
.order-item .goods-item {
  height: 270rpx;
  overflow: hidden;
  transition: height 0.3s;
}
.order-item .goods-item.true {
  height: auto;
}
.order-item .show-more {
  margin: 0 auto;
  padding: 10rpx;
  width: 30rpx;
  height: 30rpx;
  border-top: solid 1rpx #ccc;
  border-left: solid 1rpx #ccc;
  transition: 0.3s;
  transform-origin: center;
  animation: shake 1s infinite;
}
.order-item .show-more.true {
  animation: shakeTrue 1s infinite;
}
.order-item .show-more text {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-top: solid 1rpx #ccc;
  border-left: solid 1rpx #ccc;
}

@keyframes shake {
  0%, 100% {
    transform: rotate(-135deg) scale(1);
    opacity: 1;
  }
  50% {
    transform: rotate(-135deg) scale(0.8);
    opacity: 0.6;
  }
}
@keyframes shakeTrue {
  0%, 100% {
    transform: rotate(45deg) scale(1);
    opacity: 1;
  }
  50% {
    transform: rotate(45deg) scale(0.8);
    opacity: 0.8;
  }
}

