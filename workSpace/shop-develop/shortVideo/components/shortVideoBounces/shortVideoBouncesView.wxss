.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.bg-black {
  position: fixed;
  top: 0;
  left: 0;
  background-color: black;
  opacity: 0;
  transition: opacity .2s;
  width: 100%;
  height: 100%;
}

.bg-black-show {
  opacity: 0.1;
}

.bg .bouncesBG {
  position: fixed;
  bottom: -700rpx;
  width: 100%;
  height: 700rpx;
  background-color: white;
  opacity: 0.9;
  transition: .2s;
}

.bg .bouncesBG-show {
  transform: translateY(-100%);
}

.bg .bouncesBG .topView {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bg .bouncesBG .topView-leftView {
  flex: 1;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 30rpx;
  margin-left: 30rpx;
}

.bg .bouncesBG .topView-leftView-title {
  line-height: 30rpx;
  font-size: 30rpx;
  color: #42B3AB;
}

.bg .bouncesBG .scroView {
  width: 100%;
  height: 640rpx;
  overflow-y: scroll;
}

.bg .bouncesBG .scroView-listView {
  width: auto;
  height: auto;
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #EEEEED;
}

.bg .bouncesBG .scroView .rightView {
  margin-left: 20rpx;
  flex: 1;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  position: relative;
}

.bg .bouncesBG .scroView .rightView-title {
  margin-top: 5rpx;
  font-size: 24rpx;
  line-height: 29rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

.bg .bouncesBG .scroView .rightView-bottomView {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
}

.bg .bouncesBG .scroView .rightView-bottomView .moneyTitle {
  color: #4FBBB2;
  font-size: 32rpx;
  flex: 1;
}

.bg .bouncesBG .scroView .rightView-bottomView .qukankan {
  margin-top: -5rpx;
  padding: 8rpx 25rpx;
  width: auto;
  height: 33rpx;
  line-height: 33rpx;
  text-align: center;
  background-color: #4FBBB2;
  border-radius: 7rpx;
  color: white;
  font-size: 24rpx;
}
