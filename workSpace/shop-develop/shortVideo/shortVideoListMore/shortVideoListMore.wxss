@charset "UTF-8";
.bg {
  width: 100%;
  height: 100%;
}

.bg .topBg {
  display: flex;
  flex-direction: row;
}

.bg .topBg .topView {
  flex: 1;
  width: auto;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #B0B3B3;
  text-align: center;
}

.bg .topBg .topView-show {
  color: black;
  border-bottom: 4rpx solid #24D497;
}

.box {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}

.box-item {
  margin-left: 2.5%;
  flex: 0 1 30%;
  height: auto;
  position: relative;
}

.box-item .zanView {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  height: 35rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.box-item .zanView .zan-title {
  margin-left: 5rpx;
  font-size: 25rpx;
  color: white;
}

/* 回到顶部 */
.go-top {
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.go-top image {
  width: 40rpx;
  height: 40rpx;
}
