.content {
  padding-bottom: 200rpx;
  overflow: hidden;
}
.content image {
  width: 100%;
}
.content .canvas {
  position: absolute;
  left: 750rpx;
  top: 0;
  transform: scale(0) translate(-100%);
  z-index: -1;
  opacity: 0;
}
.content .main {
  position: relative;
}
.content .main .guide {
  position: absolute;
  left: 15rpx;
  bottom: 50rpx;
  width: 250rpx;
  height: 250rpx;
}
.content .popup-wrapper {
  position: relative;
  padding: 30rpx 20rpx;
  width: 450rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
}
.content .popup-wrapper .icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.content .popup-wrapper .text {
  font-size: 26rpx;
}
.content .popup-wrapper .copy-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
  background: #5b9bd5;
}
.content .footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  background: #f0f0f0;
  z-index: 999;
}
.content .footer-item {
  position: relative;
  flex: 1;
  flex-direction: column;
}
.content .footer-item text {
  font-size: 30rpx;
}
.content .footer-item .share-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  border: 0;
  opacity: 0;
  z-index: 999;
}
.content .footer-img {
  width: 100rpx;
  height: 100rpx;
}

