/* livePlayer/liveNow/liveNow.wxss */
.live_bg {
    width: 100%;
    height: 1140rpx;
    text-align: center;
    background-color: #642318;
}

.live_list_container {
    margin: 100rpx 20rpx;
}

.live_subtitle {
    margin-left: 20rpx;

}

.live_subtitle_title {
    font-size: 36rpx;
    font-weight: bolder;
}

.live_subtitle_title>view {
    display: inline;
}

.live_subtitle_title .unit view {
    display: inline;
}

.unit {
    font-size: 20rpx;
    color: #999;
    margin-left: 30rpx;
}

.live_subtitle_time {
    font-size: 24rpx;
}

.live_list_container_title {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-bottom: 20rpx;
}

.subscribe {
    text-align: center;
    line-height: 55rpx;
    align-self: center;
    margin-left: auto;
    width: 143rpx;
    height: 55rpx;
    border-radius: 30rpx;
    color: white;
    background-color: #000;
    font-size: 24rpx;
}

.live_list_container_title>.live_subtitle {
    display: flex;
    flex-direction: column;
}

.live_img_container {
    text-align: center;
    width: 100%;
    height: 465rpx;
    border-radius: 10rpx;
    display: block;
}

.live_img {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 10rpx;
}

.item {
    width: 230rpx;
    height: 230rpx;
    border-radius: 10rpx;
}

.play-position {
    width: 100%;
    height: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.play-position .img {
    display: flex;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    margin-top: 30rpx;
    margin-left: auto;
    margin-right: auto;
}

.play-position .subTitle {
    font-size: 48rpx;
    color: white;
    margin-top: 47rpx;
}

.live-now {
    position: relative;
}

.live-now-header {
    width: 100%;
    height: 1140rpx;
}

.playCallbackMask {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: black;
    border-radius: 10rpx;
    opacity: 0.25;
}

.loading {
    display: flex;
    justify-content: center;
    align-content: center;
}

.icon_img_live {
    width: 37rpx;
    height: 34rpx;
    margin-top: 10rpx;
    display: inline-block;
}

.icon_img_replay {
    width: 37rpx;
    height: 34rpx;
    margin-top: 15rpx;
    display: inline-block;
}

.icon_img_unit {
    width: 26rpx;
    height: 20rpx;
    margin-right: 8rpx;
    vertical-align: middle;
    margin-top: -4rpx;
}

.addition {
    margin-bottom: 0px;
}

.subtraction {
    margin-bottom: 80px;
}

.videoStyle {
    width: 100%;
    height: 470rpx;
    border-radius: 10rpx;
}

.video_cover {
    width: 100%;
    height: 100%;
    position: relative;
}

.video_play_icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    z-index: 5
}

.video_bg_black {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
}

.videoStyle {
    width: 100%;
    height: 450rpx;
    display: block;
    margin: 0 auto;
}

.controls {
    z-index: 1;
    margin-top: 5rpx;
}

.play {
    left: 50%;
    margin-top: -291rpx;
    margin-left: -80rpx;
}