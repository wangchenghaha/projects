.wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("https://tc.woaap.com/lingzhi/doraemonMiniapp/img/mbg.png");
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
  background-position: 0 0;
  background-size: 100% 1588rpx;
  z-index: 100;
}

.wrapper .modal {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 605rpx;
  height: 1022rpx;
  overflow: visible;
  opacity: 0;
  will-change: opacity;
  transition: all 0.3s ease;
}

.wrapper .modal.animate {
  opacity: 1;
}

